#!/usr/bin/mythryl

{
    file::set_logger_to (file::LOG_TO_FILE "xyzzy.log");
    log_if = file::log_if file::compiler_logging;
    log_if .{ "Top of script z"; }; 

    loops = 10;

    foo = REF 0;
    last = REF 0;

    mutex = pthread::make_mutex ();
    condvar = pthread::make_condvar ();

    pthread::set_up_mutex (mutex, NULL);
    pthread::set_up_condvar (condvar, NULL);

    fun subthread_fn id ()
	=
	{
								    printf "subthread_fn(%d)/AAA\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/AAA" id; };
	    pthread::acquire_mutex mutex;
								    printf "subthread_fn(%d)/BBB\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/BBB" id; };
		#
#		for (i = 0; i < loops; ++i) {
								    printf "subthread_fn(%d)/CCC\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/CCC" id; };
		    for (((*last + 1) % 4) != id) {	
								    printf "subthread_fn(%d)/DDD *last d=%d\n" id *last;   file::flush file::stdout;   file::flush file::stderr;
								    log_if .{ sprintf "subthread_fn(%d)/DDD *last d=%d\n" id *last; };
			pthread::wait_on_condvar (condvar, mutex);
								    printf "subthread_fn(%d)/EEE\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/EEE" id; };
		    };
								    printf "subthread_fn(%d)/FFF\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/FFF" id; };
		    foo := *foo + 1;
								    printf "subthread_fn(%d)/GGG\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/GGG" id; };
		    last := id;
								    printf "subthread_fn(%d)/HHH\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/HHH" id; };
		    pthread::broadcast_condvar condvar;
								    printf "subthread_fn(%d)/III\n" id;   file::flush file::stdout;   file::flush file::stderr;	log_if .{ sprintf "subthread_fn(%d)/III" id; };
								    printf "%d\n" id;   file::flush file::stdout;   file::flush file::stderr;			log_if .{ sprintf "%d" id; };
#		};
		#
								    printf "subthread_fn(%d)/JJJ\n" id;   file::flush file::stdout;   file::flush file::stderr; log_if .{ sprintf "subthread_fn(%d)/JJJ" id; };
	    pthread::release_mutex mutex;

								    printf "subthread_fn(%d)/KKK\n" id;   file::flush file::stdout;   file::flush file::stderr; log_if .{ sprintf "subthread_fn(%d)/KKK" id; };
#	    pthread::pthread_exit ();
	};	

								    printf "111\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "111"; };
    subthread0 = pthread::spawn_pthread  (subthread_fn 0);	    printf "222\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "222"; };
    subthread1 = pthread::spawn_pthread  (subthread_fn 1);	    printf "333\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "333"; };
    subthread2 = pthread::spawn_pthread  (subthread_fn 2);	    printf "444\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "444"; };
    subthread3 = pthread::spawn_pthread  (subthread_fn 3);	    printf "555\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "555"; };

    pthread::join_pthread subthread0;				    printf "666\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "666"; };
    pthread::join_pthread subthread1;				    printf "777\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "777"; };
    pthread::join_pthread subthread2;				    printf "888\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "888"; };
    pthread::join_pthread subthread3;				    printf "999\n";   file::flush file::stdout;   file::flush file::stderr; log_if .{ "999"; };

								    printf "*foo d=%d\n" *foo;   file::flush file::stdout;   file::flush file::stderr;
								    log_if .{ sprintf "*foo d=%d\n" *foo; };

    pthread::free_mutex mutex;
    pthread::free_condvar condvar;
};






