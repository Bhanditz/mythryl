#!/usr/bin/mythryl
#
# This is adapted from the Chapter 2 example from
#   GLFW Users Guide Api v 2.7
#   http://www.glfw.org/GLFWUsersGuide274.pdf

stipulate
#   package ogl =  opengl_client_for_library_in_main_process;			# opengl_client_driver_for_library_in_main_process	is from   src/glu/opengl/src/opengl-client-driver-for-library-in-main-process.pkg
    package ogl =  opengl_client_for_library_in_c_subprocess;			# opengl_client_driver_for_library_in_c_subprocess	is from   src/glu/opengl/src/opengl-client-driver-for-library-in-c-subprocess.pkg
herein

    session    = ogl::make_session [];
    fullscreen = FALSE;

    high       = 480;	
    wide       = 640;	

    if (not (ogl::open_window { session, high, wide, fullscreen }))
	printf "Unable to ogl::open_window!\n";
	ogl::terminate session;
	exit(1);
    fi;

    loop()
    where
	fun loop ()
	    =
	    {
		# OpenGL rendering goes here...

		ogl::clear { session, color_buffer => TRUE, depth_buffer => FALSE };

		ogl::swap_buffers  session;

		if (ogl::get_window_param session)   loop();	fi;
	    };
    end;

    ogl::terminate session;

    exit(0);
end;