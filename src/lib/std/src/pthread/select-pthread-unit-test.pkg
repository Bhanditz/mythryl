## select-pthread-unit-test.pkg
#
# Unit/regression test functionality for
#
#    src/lib/std/src/pthread/select-pthread.pkg
#
# (The select_pthread server offloads select()-waits on file descriptors
# from the main pthread pthread.)

# Compiled by:
#     src/lib/test/unit-tests.lib

# Run by:
#     src/lib/test/all-unit-tests.pkg


stipulate
    package pth =  pthread;							# pthread			is from   src/lib/std/src/pthread.pkg
    package sp  =  select_pthread;						# select_pthread		is from   src/lib/std/src/pthread/select-pthread.pkg
    #
    sleep = makelib::scripting_globals::sleep;
herein

    package select_pthread_unit_test {
	#
 	include unit_test;							# unit_test			is from   src/lib/src/unit-test.pkg
 
 	name =  "src/lib/std/src/pthread/select-pthread-unit-test.pkg";
 
 
	fun verify_basic__is_running__operation ()
	    =
	    {   # Pretty minimal test:  :-)
		#
		assert( sp::is_running () );
	    };

	fun verify_basic__echo__operation ()
	    =
	    {   echoed_text = REF "";
		#
		sp::echo  { what => "foo",  reply => (fn what = (echoed_text := what)) };
		#
		sleep 0.01;
		#
		assert( *echoed_text == "foo" );
	    };

 	fun run ()
 	    =
 	    {   printf "\nDoing %s:\n" name;   
 		#
		sp::start  "select-pthread-unit-test";					# This will be a no-op if it is already running.
		#
 		verify_basic__is_running__operation ();
 		verify_basic__echo__operation ();
 		#
 		summarize_unit_tests  name;
 	    };
    };
end;
