	#################################################################
	# This section implements our tree mapping (iod+op) -> client_fn:

	# Values for our two-bit read/write/oobd field:				# "oobd" == "out of band data".
	#
	 read_op =  1;
	write_op =  2;
	 oobd_op =  3;

	fun fdop_to_index (fd: psx::File_Descriptor,  op: Int)
	    =
	    {   fd' =  psx::fd_to_int  fd;
		#
		index =  (fd' << 2) | op;
		#
		index: Int;
	    };

	fun index_to_fdop (index: Int)
	    =
	    {   op =  (index  & 3);
		fd =  (index >> 2);
		#
		(fd, op);
	    };





