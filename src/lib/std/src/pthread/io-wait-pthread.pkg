	    # A helper fn shared by
	    # drop_iod_reader and	
	    # drop_iod_writer:

	    fun drop_fn (old_tree,  index)									# Drop fn with given index from our red-black tree.
		    =
		    {   (im::drop (old_tree, index))
			    ->
			    (new_tree, dropped_value);

			new_tree;
		    };
