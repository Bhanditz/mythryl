# This implements the Win32 version of the OS specific text primitive
# IO package.  It is implemented by a trivial translation of the
# binary operations (see binary-file-io-driver-for-win32.pkg).



package text_file_io_driver_for_win32:  api

    include Winix_Base_File_Io_Driver_For_Os

    my stdin:   Void -> filereaders_and_filewriters::Reader
    my stdout:  Void -> filereaders_and_filewriters::Writer
    my stderr:  Void -> filereaders_and_filewriters::Writer

    my string_reader:  String -> filereaders_and_filewriters::Reader

  end
{

    package md = maildrop
    package binary_file_io_driver_for_posix = binary_file_io_driver_for_win32
    package filereaders_and_filewriters = text_file_io_driver_for_posix

    package W32FS = Win32::file_system
    package W32IO = Win32::IO
    package W32G = Win32::general

    package v = vector_of_one_byte_unts
	
    type File_Descriptor = W32G::hndl

    bufferSzB = 4096

 /* If char::char is really one_byte_unt::word, then very efficient versions of
  * translateIn and translateOut are possible:
  */
    my translateIn:  binary_file_io_driver_for_posix::filereaders_and_filewriters::Reader -> filereaders_and_filewriters::Reader = unsafe::cast
    my translateOut: binary_file_io_driver_for_posix::filereaders_and_filewriters::Writer -> filereaders_and_filewriters::Writer = unsafe::cast

    fun openRd fname = translateIn (binary_file_io_driver_for_posix::openRd fname)
    fun openWr fname = translateOut (binary_file_io_driver_for_posix::openWr fname)
    fun openApp fname = translateOut (binary_file_io_driver_for_posix::openApp fname)

    fun mkReader args = translateIn (binary_file_io_driver_for_posix::mkReader args)
    fun mkWriter args = translateOut (binary_file_io_driver_for_posix::mkWriter args)

    fun stdin () = let
	  h = W32IO::getStdHandle (W32IO::STD_INPUT_HANDLE)
	  in
	    if W32G::isValidHandle h
	      then mkReader { fd = h, name = "<stdin>"}
	      else raise exception winix::RUNTIME_EXCEPTION("text_file_io_driver_for_win32: can't get stdin", NULL)
	  end
    
    fun stdout () = let
	  h = W32IO::getStdHandle (W32IO::STD_OUTPUT_HANDLE)
	  in
	    if W32G::isValidHandle h
	      then mkWriter {
		  fd = h,
		  name = "<stdout>",
		  appendMode = TRUE,
		  chunkSize = bufferSzB
		}
	      else raise exception winix::RUNTIME_EXCEPTION("text_file_io_driver_for_win32: can't get stdout", NULL)
	  end
    
    fun stderr () = let
	  h = W32IO::getStdHandle (W32IO::STD_ERROR_HANDLE)
	  in
	    if W32G::isValidHandle h
	      then mkWriter {
		  fd = h,
		  name = "<stderr>",
		  appendMode = TRUE,
		  chunkSize = bufferSzB
		}
	      else raise exception winix::RUNTIME_EXCEPTION("text_file_io_driver_for_win32: can't get stderr", NULL)
	  end
    
    fun string_reader src = let
	  lockMV = md::mVarInit()
	  fun withLock f x = (
		md::mTake lockMV;
		f x before md::mPut (lockMV, ()))
		  except ex => (md::mPut (lockMV, ()); raise exception ex)
	  pos = REF 0
	  closed = REF FALSE
	  fun checkClosed () = if *closed then raise exception io::CLOSED_IO_STREAM else ()
	  len = string::size src
	  fun avail () = (len - *pos)
	  fun readV n = let
		p = *pos
		m = int::min (n, len-p)
		in
		  checkClosed ();
		  pos := p+m;
# * NOTE: could use unchecked operations here *
		  string::substring (src, p, m)
		end
	  fun readA asl = let
	      my (buf, i, n) = rw_vector_slice_of_chars::base asl
		p = *pos
		m = int::min (n, len-p)
		in
		  checkClosed ();
		  pos := p+m;
		  rw_vector_slice_of_chars::copyVec { src = vector_slice_of_chars::slice 
						     (src, p, THE len),
					   dst = buf, di = i };
		  m
		end
	  fun getPos () = (checkClosed(); *pos)
	  in
	      filereaders_and_filewriters::RD {
		name        = "<string>", 
		chunkSize   = len,
		readVec     = withLock readV,
        	readArr     = withLock readA,
		readVecEvt  = withLock (threadkit::alwaysEvt o readV),
		readArrEvt  = withLock (threadkit::alwaysEvt o readA),
		avail       = THE o avail,
		getPos      = THE (withLock getPos),
		setPos	    = THE (withLock (fn i => (
				checkClosed();
				if (i < 0) or (len < i)
				  then raise exception SUBSCRIPT
				  
				pos := i))),
        	endPos      = THE (withLock (fn () => (checkClosed(); len))),
		verifyPos   = THE (withLock getPos),
		close       = withLock (fn () => closed := TRUE),
		ioDesc      = NULL
	      }
	  end

};		#  text_file_io_driver_for_win32 



