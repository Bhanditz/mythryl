		fun redirect_one_io_call
			{
			   io_call:  Y -> Z,
			  lib_name:  String,
			  fun_name:  String
			}
		    =
		    {
														call_number =  REF 0;

			fn (y: Y)
			    =
			    {   Result(Z) =  RESULT Z
					  |  EXCEPTION Exception
					  ;

														n = *call_number;	call_number := n + 1;	# Yes, in principle we should use a mutex. In practice we're testing mono-calling-thread  and the window is small and a bad 'n' is no biggie anyhow.

														log::note_in_ramlog .{ sprintf "%s.%s syscall #%d phase 1 (clientside)."   lib_name fun_name n; };
														log::note           .{ sprintf "%s.%s syscall #%d phase 1 (clientside)."   lib_name fun_name n; };

				oneshot =   make_oneshot_maildrop ();
				#
				io::do .{
														log::note_in_ramlog .{ sprintf "%s.%s syscall #%d phase 2.0 (serverside)."   lib_name fun_name n; };
														log::note           .{ sprintf "%s.%s syscall #%d phase 2.0 (serverside)."   lib_name fun_name n; };
					    result =    RESULT (io_call y)
							except
							    x = EXCEPTION x;

														log::note_in_ramlog .{ sprintf "%s.%s syscall #%d phase 2.1 (serverside)."   lib_name fun_name n; };
														log::note           .{ sprintf "%s.%s syscall #%d phase 2.1 (serverside)."   lib_name fun_name n; };
					    ts::do .{
														log::note_in_ramlog .{ sprintf "%s.%s syscall #%d phase 3 (threadsched)."   lib_name fun_name n; };
														log::note           .{ sprintf "%s.%s syscall #%d phase 3 (threadsched)."   lib_name fun_name n; };

							redirected_calls_done :=  *redirected_calls_done + 1;	# Purely for src/lib/std/src/psx/posix-io-unit-test.pkg
														# No mutex here -- the performance hit wouldn't be worth it and we only use it in a single-threaded context.
														# NB: It is important to do this before the following set(), otherwise posix_io_unit_test will probably miss the last increment.
							set (oneshot, result);
							#
						    };
					};

														result =
				case (get oneshot)
				    #
				    RESULT    z =>  z;
				    EXCEPTION x =>  raise exception  x;
				esac;
														log::note_in_ramlog .{ sprintf "%s.%s syscall #%d phase 4 (clientside)."   lib_name fun_name n; };
														log::note           .{ sprintf "%s.%s syscall #%d phase 4 (clientside)."   lib_name fun_name n; };
														result;
			    }; 
		    };

