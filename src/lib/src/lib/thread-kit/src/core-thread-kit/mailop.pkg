	fun make_select_rule (mailop, wfn)				# This is the "==>" op used in select[...] rules.
	    =
	    wrap' mailop
	    where
		fun wrap_base_mailop  is_mailop_ready_to_fire  ()
		    =
		    case (is_mailop_ready_to_fire ())
			#
			MAILOP_IS_READY_TO_FIRE { priority, fire_mailop }		=>  MAILOP_IS_READY_TO_FIRE { priority, fire_mailop => wfn o fire_mailop };
			MAILOP_IS_NOT_READY_TO_FIRE start_watching_for_mailop_ready	=>  MAILOP_IS_NOT_READY_TO_FIRE (wfn o start_watching_for_mailop_ready);
		    esac;
		#
		fun wrap' (ISREADY_MAILOPS base_mailops)	=>  ISREADY_MAILOPS (map  wrap_base_mailop  base_mailops);		# Curried application yields thunklist that will do  case (is_mailop_ready_to_fire() )... esac
		    #															# when later invoked.
		    wrap' (CHOOSE_MAILOP mailops)		=>  CHOOSE_MAILOP	     (map wrap' mailops);
		    #															# when later invoked.
		    wrap' (DYNAMIC_MAILOP make_mailop)		=>  DYNAMIC_MAILOP           (fn ()     =  make_select_rule (make_mailop(), wfn));
		    wrap' (DYNAMIC_MAILOP_WITH_NACK f)		=>  DYNAMIC_MAILOP_WITH_NACK (fn mailop =  make_select_rule (f mailop,      wfn));
		end;
	    end;

	(==>) =  make_select_rule;			# Infix synonym for readability.
