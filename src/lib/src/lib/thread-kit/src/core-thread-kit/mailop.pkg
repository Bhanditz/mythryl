	# Combine a list of mailops into a single mailop:
	#
	fun cat_mailops (mailops:  List(  Mailop(X) ))										# This gets called in (for example):   src/lib/std/src/io/threadkit-winix-mailslot-io-g.pkg
	    =															# A frequent idiom is  do_mailop (cat_mailops mailops);
	    gather (reverse mailops, [])											#
	    where
		fun gather ([],                               results) =>  ISREADY_MAILOPS results;				# Done, return results.
		    #
		    gather (ISREADY_MAILOPS []       ! rest,  results) =>  gather (rest,           results);
		    gather (ISREADY_MAILOPS [mailop] ! rest,  results) =>  gather (rest, mailop  ! results);
		    gather (ISREADY_MAILOPS  mailops ! rest,  results) =>  gather (rest, mailops @ results);
		    #
		    gather (mailops, []) =>  gather' (mailops, []);
		    gather (mailops, l ) =>  gather' (mailops, [ISREADY_MAILOPS l]);
		end 

		also
		fun gather' ([], [mailop]) =>  mailop;
		    gather' ([], mailops)  =>  CHOOSE_MAILOP mailops;
		    #
		    gather'  (CHOOSE_MAILOP mailops ! rest,  mailops')
			=>
			gather' (rest, mailops @ mailops');

		    gather' (ISREADY_MAILOPS base_mailops ! rest, ISREADY_MAILOPS base_mailops' ! rest')
			=>
			gather' (rest, ISREADY_MAILOPS (base_mailops @ base_mailops') ! rest');

		    gather' (mailop ! rest, mailops')
			=>
			gather' (rest, mailop ! mailops');
		end;
	    end;
