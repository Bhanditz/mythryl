log::note .{ sprintf "%s\tpeek'/is_mailop_ready_to_fire/DDD %s -- maildrop.pkg"  (ts::thread_scheduler_statestring ())  (maildrop_to_string  maildrop);	};	# [5] [B]
		itt::BASE_MAILOPS [is_mailop_ready_to_fire];
	    };



