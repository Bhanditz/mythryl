		#
		fun find_ith_entry_in_uniqtyp_dictionary (i, typ_dict:  Uniqtyp_Dictionary)
		    = 
		    if (i > 1)
			#
			case (uniqtyp_to_typ' typ_dict)
			    #
			    typ::ARROW(_, _,[x]) =>  find_ith_entry_in_uniqtyp_dictionary (i - 1, x);
			    _                    =>  bug "unexpected typ_dictionary in tcLookup";
			esac;
		    else
			if (i == 1)
			    #
			    case (uniqtyp_to_typ' typ_dict)
				#
				typ::ARROW(_,[x], _) =>  unpack_ith_in_typeseq x; 
				_                    =>  raise exception UNBOUND_TYP;
			    esac;
			else
			    bug "unexpected argument in tcLookup";
			fi;
		    fi;

