		fun unpack_ith_in_typeseq x
		    = 
		    case (uniqtyp_to_typ' x)
			#
			typ::ITH_IN_TYPESEQ (y, i)
			    =>
			    case (uniqtyp_to_typ'  y)
				#
				typ::TYPESEQ ts  =>  (THE ts, i);
				typ::BASETYPE _  =>  (NULL,   i);
				_                =>  bug "unexpected tycDict1 in unpack_ith_in_typeseq";
			    esac;

		       _ => bug "unexpected tycDict2 in unpack_ith_in_typeseq";
		    esac;

		# Inverse to above fn:
		#
		fun pack_ith_in_typeseq (NULL, i)
			=>
			find_or_make_uniqtyp (typ::ITH_IN_TYPESEQ (void_uniqtyp, i));

		    pack_ith_in_typeseq (THE uniqtyps, i)
			=> 
			find_or_make_uniqtyp (typ::ITH_IN_TYPESEQ (find_or_make_uniqtyp (typ::TYPESEQ uniqtyps), i));
		end;

