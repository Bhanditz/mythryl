	    find_or_make_uniqtyp_from_boxed		=  find_or_make_uniqtyp  o  typ::BOXED;
	    find_or_make_uniqtyp_from_sum		=  find_or_make_uniqtyp  o  typ::SUM;
	    find_or_make_uniqtyp_from_extensible_token	=  find_or_make_uniqtyp  o  typ::EXTENSIBLE_TOKEN;
	    find_or_make_uniqtyp_from_float64		=  find_or_make_uniqtyp (typ::BASETYPE hbt::basetype_float64);

						    # nextcode_preimprover_transform	def in     src/lib/compiler/back/top/nextcode/nextcode-preimprover-transform-g.pkg

	    # The following functions decide on how to
	    # flatten the arguments and results of an
	    # arbitrary highcode function.
	    #
	    # The current threshold	is maintained by
	    # the "flatten_limit" parameter.
	    #
	    # This parameter is intended to be
	    # architecture independent, however
	    # some implicit constraints are:
	    #
	    #     (1) flatten_limit <= numgpregs - numcalleesaves - 3
	    #     (2) flatten_limit <= numfpregs - 2
	    #
	    # Right now (2) is in general not true for intel32;
	    # we inserted a special hack in
	    # nextcode_preimprover_transform phase
	    # to deal with this case.
	    #
	    # In the long term, if the spilling phase
	    # in the backend can offer more support
	    # on large numbers of arguments, then we
	    # can make this flattening more aggressive.
	    #
	    #                      -- Zhong

	    flatten_limit = 9;  						# ZHONG added the magic number 10 
										# XXX BUGGO FIXME  This constant shouldn't be buried down here, but rather up in some config package.
	    #
	    fun uniqtyp_is_known  (typ: Uniqtyp)
		= 
		case (uniqtyp_to_typ' (reduce_uniqtyp_to_weak_head_normal_form  typ))
		    #	
		    ( typ::BASETYPE _
                    | typ::ARROW _
                    | typ::BOXED _
                    | typ::ABSTRACT _
                    | typ::PARROW _
		    | typ::FATE _
                    | typ::RECURSIVE _
                    | typ::SUM _
                    | typ::TUPLE _
                    )   #
			=>  TRUE;

		    typ::APPLY_TYPEFUN   (typ', _)  =>  uniqtyp_is_known  typ';
		    typ::ITH_IN_TYPESEQ  (typ', _)  =>  uniqtyp_is_known  typ';

		    typ::EXTENSIBLE_TOKEN kx =>  token_is_known  kx;

		    ( typ::DEBRUIJN_TYPEVAR       _
		    | typ::NAMED_TYPEVAR _
		    | typ::TYPEFUN        _
		    | typ::TYPESEQ       _
		    | typ::INDIRECT_TYPE_THUNK  _
		    | typ::TYPE_CLOSURE   _
		    )   #
                        =>  FALSE;
		esac

	    also
	    fun tc_autoflat  (typ:  Uniqtyp)
		= 
		{   new_typ =  reduce_uniqtyp_to_weak_head_normal_form  typ; 

		    case (uniqtyp_to_typ'  new_typ)
			#
			typ::TUPLE (_, [_])			# Singleton record is not flattened to ensure
			    =>		  			# isomorphism between plambdatype and highcodetype.
			    (TRUE, [new_typ], FALSE);

			typ::TUPLE (_, [])			# Void is not flattened to avoid coercions.
			    =>
			    (TRUE, [new_typ], FALSE);

			typ::TUPLE (_, ts)
			    => 
			    if (length ts <= flatten_limit)             (TRUE, ts,        TRUE );
			    else			                (TRUE, [new_typ], FALSE);
			    fi;	

			_ => if (uniqtyp_is_known  new_typ)	(TRUE,  [new_typ], FALSE);
			     else				(FALSE, [new_typ], FALSE);
			     fi;
		    esac;
		}

	    also
	    fun uniqtyp_list_to_uniqtyp_tuple [x]
		    =>
		    x; 

		uniqtyp_list_to_uniqtyp_tuple  xs
		    => 
		    if (length xs <= flatten_limit)
			#
			find_or_make_uniqtyp_from_tuple (USELESS_RECORDFLAG, xs);
		    else
			bug "fatal error with uniqtyp_list_to_uniqtyp_tuple";
		    fi;
	    end 

	    also
	    fun tcs_autoflat (flag, ts)
		= 
		if flag
		    (flag, ts); 
		else
		    case ts 
			#
			[tc] => {   ntc =  reduce_uniqtyp_to_weak_head_normal_form   tc;

				    (tc_autoflat ntc) ->   (nraw, ntcs, _);

				    (nraw, ntcs);
				 };

			 _   => bug "unexpected cooked multiples in tcs_autoflat";
		    esac;
		fi

	    also
	    fun lt_autoflat (lt: Uniqtype)          :        (Bool, List(Uniqtype), Bool)
		= 						#   raw                         flag
		# Automatically flattening the argument or the result type:
		#
		case (uniqtype_to_type'  (reduce_uniqtype_to_weak_head_normal_form  lt))
		    #
		    type::TYP tc
			=> 
			{   (tc_autoflat tc) ->   (raw, ts, flag);
			    #
			    (raw, map find_or_make_uniqtype_from_typ ts, flag);
			};

		    _    =>
			 (TRUE, [lt], FALSE);
		esac

	    # A special version of make_arrow_uniqtyp
	    # that does automatic flattening:
	    #
	    also
	    fun make_arrow_uniqtyp (x as (FIXED_CALLING_CONVENTION, _, _))
		    =>
		    find_or_make_uniqtyp (typ::ARROW x);

		make_arrow_uniqtyp (x as (VARIABLE_CALLING_CONVENTION { arg_is_raw => TRUE, body_is_raw => TRUE }, _, _))
		    =>
		    find_or_make_uniqtyp (typ::ARROW x);

		make_arrow_uniqtyp (b as (VARIABLE_CALLING_CONVENTION { arg_is_raw => b1, body_is_raw => b2 }), ts1, ts2)
		    =>
		    {   my (nb1, nts1) =  tcs_autoflat (b1, ts1);
			my (nb2, nts2) =  tcs_autoflat (b2, ts2);

			find_or_make_uniqtyp (typ::ARROW (VARIABLE_CALLING_CONVENTION { arg_is_raw => nb1, body_is_raw => nb2 },  nts1, nts2));
		    };
	    end 

	    # Utility function to read the top-level
	    # of a Uniqtyp:
	    #
	    also
	    fun tc_lzrd t		#  Maybe "lzrd" == "level zero read" ?  anyhow, probably not "lizard" :-)
		= 
		{   fun g x
			= 
			case (uniqtyp_to_typ' x)
			    #
			    typ::INDIRECT_TYPE_THUNK (tc, _)
				=>
				g tc;

			    typ::TYPE_CLOSURE (tc, i, j, te)
				=> 
				{   ntc = g (h(tc, i, j, te));
				    #
				    update_typ (x, ntc);

				    ntc;
				};

			    _ => x;
			esac

		    also
		    fun h (x, 0, 0, _)
			    =>
			    g x;

			h (x, ol, nl, typ_dict:  Uniqtyp_Dictionary)
			    => 
			    {   fun prop z
				    =
				    make_type_closure_uniqtyp (z, ol, nl, typ_dict);

				case (uniqtyp_to_typ' x)
				    #
				    typ::DEBRUIJN_TYPEVAR (i, j)
					=> 
					if (i <= ol) 
					    #
					    et = find_ith_entry_in_uniqtyp_dictionary (i, typ_dict);

					    case et 
						#
						(NULL,   n)
						    =>
						    find_or_make_uniqtyp_from_var (nl - n, j);

						(THE ts, n)
						    =>
						    {   y = list::nth (ts, j) 
							    except
								_ = raise exception UNBOUND_TYP;

							h (y, 0, nl - n, empty_uniqtyp_dictionary);
						    };
					    esac;

					else
					    find_or_make_uniqtyp_from_var (i-ol+nl, j);
					fi;

				    typ::NAMED_TYPEVAR _ => x;
				    typ::BASETYPE      _ => x;

				    typ::TYPEFUN (ks, tc) => {   typ_dict' = cons_entry_onto_uniqtyp_dictionary (typ_dict, (NULL, nl));
							 	 find_or_make_uniqtyp_from_fn (ks, make_type_closure_uniqtyp (tc, ol+1, nl+1, typ_dict'));
						      	     };

				    typ::APPLY_TYPEFUN (tc, tcs) =>  find_or_make_uniqtyp_from_apply (prop tc, map prop tcs);
				    typ::TYPESEQ tcs		 =>  find_or_make_uniqtyp_from_seq (map prop tcs);
				    typ::ITH_IN_TYPESEQ (tc, i)	 =>  find_or_make_uniqtyp_from_proj (prop tc, i);
				    typ::SUM tcs		 => find_or_make_uniqtyp_from_sum (map prop tcs);

				    typ::RECURSIVE ((n, tc, ts), i)
					=> 
					find_or_make_uniqtyp_from_recursive((n, prop tc, map prop ts), i);

				    typ::ABSTRACT tc		 =>  find_or_make_uniqtyp_from_abstract (prop tc);
				    typ::BOXED    tc		 =>  find_or_make_uniqtyp_from_boxed (prop tc);

				    typ::TUPLE (rk, tcs)	 =>  find_or_make_uniqtyp_from_tuple (rk, map prop tcs);
				    typ::ARROW (r, ts1, ts2)	 =>  make_arrow_uniqtyp (r, map prop ts1, map prop ts2);
				    typ::PARROW (t1, t2)	 =>  find_or_make_uniqtyp_from_parrow (prop t1, prop t2);

				    typ::EXTENSIBLE_TOKEN (k, t) =>  find_or_make_uniqtyp_from_extensible_token (k, prop t);
				    typ::INDIRECT_TYPE_THUNK (tc, _)  =>  h (tc, ol, nl, typ_dict);

				    typ::TYPE_CLOSURE (tc, ol', nl', typ_dict')
					=> 
					if (ol == 0)   h (tc,  ol', nl+nl', typ_dict');
					else           h (g x, ol,  nl,     typ_dict );
					fi;

				    typ::FATE _
					=>
					bug "unexpected typ::FATE in tc_lzrd";
				esac;
			    };
		    end;				# fun h 

		    if (uniqtyp_is_normalized t)      t;
		    else                                     g t;
		    fi;
	      }								# fun tc_lzrd 

	    # Utility function to read the
	    # top-level of an Uniqtype:
	    #
	    also
	    fun lt_lzrd t		#  Maybe "lzrd" == "level zero read" ? 
		= 
		{   fun g x
			= 
			case (uniqtype_to_type' x)
			    #
			    type::INDIRECT_TYPE_THUNK (lt, _)
				=>
				g lt;

			    type::TYPE_CLOSURE (lt, i, j, te)
				=> 
				{   new_type = g (h(lt, i, j, te));

				    update_type (x, new_type);

                                    new_type;
				};

			     _ => x;
			esac

		    also
		    fun h (x, 0, 0, _)
			    =>
			    g x;

			h (x, ol, nl, typ_dict:  Uniqtyp_Dictionary)
			    => 
			    {   fun prop z
				    =
				    make_type_closure_uniqtype (z, ol, nl, typ_dict);

				case (uniqtype_to_type'  x)
				    #
				    type::TYP tc
					=>
					find_or_make_uniqtype_from_typ (make_type_closure_uniqtyp (tc, ol, nl, typ_dict));

				    type::PACKAGE ts
					=>
					find_or_make_uniqtype_from_package (map prop ts);

				    type::GENERIC_PACKAGE (ts1, ts2)
					=>
					find_or_make_uniqtype_from_generic_package (map prop ts1, map prop ts2);

				    type::TYPEAGNOSTIC (ks, ts)
					=> 
					{   typ_dict' = cons_entry_onto_uniqtyp_dictionary (typ_dict, (NULL, nl));

					    find_or_make_uniqtype_from_typeagnostic
					      ( ks, 
						map (fn t = make_type_closure_uniqtype (t, ol+1, nl+1, typ_dict'))
						    ts
					      );
				       };

				    type::FATE _
					=>
					bug "unexpected type::FATE in lt_lzrd";

				    type::INDIRECT_TYPE_THUNK (t, _)
					=>
					h (t, ol, nl, typ_dict);

				    type::TYPE_CLOSURE (lt, ol', nl', typ_dict')
					=> 
					if (ol == 0)  h (lt,  ol', nl+nl', typ_dict');
					else          h (g x, ol,  nl,     typ_dict );
					fi;

				esac;
			  };
		    end;			#  function h 

		    if (uniqtype_is_normalized  t)     t;
		    else                             g t;
		    fi;
		}                                     #  function lt_lzrd 

	    # Taking out the typ::INDIRECT_TYPE_THUNK indirection:
	    #
	    also
	    fun strip_indirection t
		=
		case (uniqtyp_to_typ' t)
		    #
		    typ::INDIRECT_TYPE_THUNK (x, _) =>  strip_indirection x;
		    _                  =>  t;
		esac

	    # Normalizing an arbitrary Uniqtyp
	    # into a simple weak-head-normal-form
	    #
	    also
	    fun reduce_uniqtyp_to_weak_head_normal_form  t
		=
		if (uniqtyp_is_normalized t)
		    t;
		else
		    nt = tc_lzrd t;

		    case (uniqtyp_to_typ' nt)
			#
			typ::APPLY_TYPEFUN (tc, tcs)
			    =>
			    {   tc' = reduce_uniqtyp_to_weak_head_normal_form tc;

				case (uniqtyp_to_typ' tc')
				    #
				    typ::TYPEFUN (ks, b)
					=>  
					{   fun base ()
						= 
						(b, 1, 0, cons_entry_onto_uniqtyp_dictionary (empty_uniqtyp_dictionary, (THE tcs, 0)));

					    sp =    case (uniqtyp_to_typ' b)
							#
							typ::TYPE_CLOSURE (b', ol', nl', te')
							    => 
							    case (head_and_tail_of_uniqtyp_dictionary te')
								#
								THE((NULL, n), te)
								    =>
								    if (n == nl' - 1  and   ol' > 0)
									#
									(b', ol', n, 
									cons_entry_onto_uniqtyp_dictionary (te, (THE tcs, n)));
								    else
									base ();
								    fi;

							        _ => base();
							    esac;

							_ => base();
						    esac;

					  result = reduce_uniqtyp_to_weak_head_normal_form (make_type_closure_uniqtyp sp);

					  update_typ (nt, result);

					  result;
					};

				    ( typ::TYPESEQ _
				    | typ::TUPLE   _
				    | typ::ARROW   _
				    | typ::INDIRECT_TYPE_THUNK _
				    )
					=>
					bug "unexpected typs in reduce_uniqtyp_to_weak_head_normal_form typ::APPLY_TYPEFUN";

				   _ => {   xx = find_or_make_uniqtyp_from_apply (tc', tcs); 
					    strip_indirection xx;
					};
			       esac;
			    };

			typ::ITH_IN_TYPESEQ (tc, i)
			    =>
			    {   tc' = reduce_uniqtyp_to_weak_head_normal_form tc;

				case (uniqtyp_to_typ' tc')
				    #
				    typ::TYPESEQ tcs
					=> 
					{   result = list::nth (tcs, i)
						     except
							 _ = bug "typ::TYPESEQ in reduceTypeConstructorToWeakHeadNormalForm";

					    new_result = reduce_uniqtyp_to_weak_head_normal_form result;

					    update_typ (nt, new_result);

					    new_result;
					};

				    ( typ::BASETYPE _
                                    | typ::NAMED_TYPEVAR _
                                    | typ::RECURSIVE _
                                    | typ::TYPEFUN _
				    | typ::SUM _
                                    | typ::ARROW _
                                    | typ::ABSTRACT _
                                    | typ::BOXED _
				    | typ::INDIRECT_TYPE_THUNK _
                                    | typ::TUPLE _
                                    )
					=>
					bug "unexpected typs in reduce_uniqtyp_to_weak_head_normal_form typ::ITH_IN_TYPESEQ";

				    _   =>  {   xx = find_or_make_uniqtyp_from_proj (tc', i);
					        strip_indirection xx;
					     };
				esac;
			    };

			typ::EXTENSIBLE_TOKEN (k, tc)
			    =>
			    {   tc' = reduce_uniqtyp_to_weak_head_normal_form tc;

				if (token_whnm k tc') 
				    #
				    xx = find_or_make_uniqtyp_from_extensible_token (k, tc');
				    strip_indirection xx;
				else
				    result =  token_reduce (k, tc');
				    new_result   =  reduce_uniqtyp_to_weak_head_normal_form  result;
				    update_typ (nt, new_result);
				    new_result;
				fi;
			    };

			typ::INDIRECT_TYPE_THUNK (tc, _)
			    =>
			    reduce_uniqtyp_to_weak_head_normal_form tc;

			typ::TYPE_CLOSURE _
			    =>
			    bug "unexpected typ::TYPE_CLOSURE in reduce_uniqtyp_to_weak_head_normal_form";

			_   => nt;
		    esac;
		fi			# fun reduce_uniqtyp_to_weak_head_normal_form


	    # Normalizing an arbitrary Uniqtype
	    # into the simple weak-head-normal-form 
	    #
	    also
	    fun reduce_uniqtype_to_weak_head_normal_form t
		=
		if (uniqtype_is_normalized (t) )
		    #
		    t;
		else 
		    nt = lt_lzrd t;

		    case (uniqtype_to_type'  nt)
			#
			type::TYP tc
			    =>
			    find_or_make_uniqtype_from_typ (reduce_uniqtyp_to_weak_head_normal_form  tc);

			 _ => nt;
		    esac;
		fi;			# fun reduceLambdaTypeToWeakHeadNormalForm 

	    # Normalizing an arbitrary Uniqtyp
	    # into the standard normal form:
	    #
	    fun reduce_uniqtyp_to_normal_form t
		=
		if (uniqtyp_is_normalized t)
		    #
		    t;
		else
		    nt = reduce_uniqtyp_to_weak_head_normal_form t;

		    if (uniqtyp_is_normalized nt)
			#
			nt;
		    else
			result
			    = 
			    case (uniqtyp_to_typ'  nt)
				#
				typ::TYPEFUN (ks, tc)
				    =>
				    find_or_make_uniqtyp_from_fn (ks, reduce_uniqtyp_to_normal_form tc);

				typ::APPLY_TYPEFUN (tc, tcs)
				    => 
				    find_or_make_uniqtyp_from_apply
				      (     reduce_uniqtyp_to_normal_form tc,
					map reduce_uniqtyp_to_normal_form tcs
				      );

				typ::TYPESEQ tcs      =>  find_or_make_uniqtyp_from_seq  (map reduce_uniqtyp_to_normal_form tcs);
				typ::ITH_IN_TYPESEQ (tc, i) =>  find_or_make_uniqtyp_from_proj     (reduce_uniqtyp_to_normal_form tc, i);
				typ::SUM tcs      =>  find_or_make_uniqtyp_from_sum  (map reduce_uniqtyp_to_normal_form tcs);

				typ::RECURSIVE ((n, tc, ts), i)
				    => 
				    find_or_make_uniqtyp_from_recursive
				      ( ( n,
					  reduce_uniqtyp_to_normal_form      tc,
					  map reduce_uniqtyp_to_normal_form  ts
					),

					i
				      );

				typ::ABSTRACT tc     =>  find_or_make_uniqtyp_from_abstract	(reduce_uniqtyp_to_normal_form  tc);
				typ::BOXED tc        =>  find_or_make_uniqtyp_from_boxed	(reduce_uniqtyp_to_normal_form  tc);
				typ::TUPLE (rk, tcs) =>  find_or_make_uniqtyp_from_tuple	(rk, map reduce_uniqtyp_to_normal_form  tcs);

				typ::ARROW (r, ts1, ts2)
				    => 
				    make_arrow_uniqtyp
				      ( r,
					map  reduce_uniqtyp_to_normal_form  ts1,
					map  reduce_uniqtyp_to_normal_form  ts2
				      );

				typ::PARROW (t1, t2)
				    =>
				    find_or_make_uniqtyp_from_parrow
				      (
					reduce_uniqtyp_to_normal_form  t1,
					reduce_uniqtyp_to_normal_form  t2
				      );

				typ::EXTENSIBLE_TOKEN (k, t)	=>   find_or_make_uniqtyp_from_extensible_token (k, reduce_uniqtyp_to_normal_form t);
				typ::INDIRECT_TYPE_THUNK (tc,_)	=>   reduce_uniqtyp_to_normal_form tc;

				typ::TYPE_CLOSURE _ => bug "unexpected typs in reduceTypeConstructorToNormalForm";

				_ => nt;
			    esac;

			update_typ (nt, result);

			result;
		    fi;
		fi;			# fun reduceTypeConstructorToNormalForm 

	    # Normalizing an arbitrary Uniqtype
	    # into the standard normal form
	    #
	    fun reduce_uniqtype_to_normal_form t
		=
		if (uniqtype_is_normalized t)
		    #
		    t;
		else 
		    nt = lt_lzrd t;

		    if (uniqtype_is_normalized  nt)
			#
			nt;
		    else 
			result
			    = 
			    case (uniqtype_to_type' nt)
				#
				type::TYP	tc =>  find_or_make_uniqtype_from_typ         (reduce_uniqtyp_to_normal_form tc);
				type::PACKAGE	ts =>  find_or_make_uniqtype_from_package (map reduce_uniqtype_to_normal_form ts);

				type::GENERIC_PACKAGE (ts1, ts2)
				    => 
				    find_or_make_uniqtype_from_generic_package
				      (
					map  reduce_uniqtype_to_normal_form  ts1,
					map  reduce_uniqtype_to_normal_form  ts2
				      );

				type::TYPEAGNOSTIC        (ks, ts) =>   find_or_make_uniqtype_from_typeagnostic (ks, map reduce_uniqtype_to_normal_form ts);
				type::INDIRECT_TYPE_THUNK (lt, _)  =>   reduce_uniqtype_to_normal_form lt;

				_ => bug "unexpected ltys in reduceLambdaTypeToNormalForm";
			    esac;

			update_type (nt, result);

			result;
		    fi;
		fi;			# fun reduceLambdaTypeToNormalForm 


	    # **************************************************************************
	    #          REGISTER A NEW TOKEN TYC --- typ::WRAP                            *
	    # **************************************************************************

	    # We add a new constructor named
	    # typ::RBOX through the token facility:
	    #
	    stipulate

		name = "typ::WRAP";

		abbrev = "WR";

		is_known =  fn _ = TRUE;      # Why is this ? 	XXX BUGGO FIXME
		#
		fun tcc_tok k t
		    =
		    find_or_make_uniqtyp_from_extensible_token (k, t);
		#
		fun unknown tc
		    = 
		    case (uniqtyp_to_typ' tc)
			#
			(typ::DEBRUIJN_TYPEVAR _ | typ::NAMED_TYPEVAR _) => TRUE;

			(typ::APPLY_TYPEFUN  (tc, _)) =>  unknown tc;
			(typ::ITH_IN_TYPESEQ (tc, _)) =>  unknown tc;

		        _ => FALSE;
		    esac;
		#
		fun flex_tuple ts
		    = 
		    hhh (ts, FALSE, TRUE)
		    where
			fun hhh (x ! r, ukn, wfree)
				=> 
				{   fun iswp tc
					=
					case (uniqtyp_to_typ' tc)
					    #
					    typ::EXTENSIBLE_TOKEN (k', t)		 #  WARNING: need check k' 
						=>
						case (uniqtyp_to_typ' t)
						    #
						    typ::BASETYPE pt =>  FALSE;
						    _          =>  TRUE;
						esac;

					    _ => TRUE;
					esac;

				    hhh (r, (unknown x) or ukn, (iswp x) and wfree);
				};

			    hhh([], ukn, wfree)
				=>
				ukn and wfree;
			end;
		    end;
		#
		fun is_weak_head_normal_form  tc
		    = 
		    case (uniqtyp_to_typ'  tc)
			#
			(typ::ARROW (FIXED_CALLING_CONVENTION, [t], _)) =>  (unknown  t); 
			(typ::TUPLE (rf, ts))             		=>  flex_tuple   ts;
			(typ::BASETYPE pt)				=>  hbt::basetype_is_unboxed  pt;
			_						=>  FALSE;
		    esac;

		# Invariants: tc itself is in weak head normal form,
		# but is_weak_head_normal_form tc == FALSE 
		#
		fun reduce_one (k, tc)
		    =  
		    case (uniqtyp_to_typ' tc)
			#
			typ::TUPLE (rk, ts)
			    => 
			    hhh (ts, [], FALSE)
			    where
				fun hhh (x ! r, nts, ukn)
					=> 
					hhh (r, nnx ! nts, b1 or ukn)
					where
					    nx = reduce_uniqtyp_to_weak_head_normal_form x;
					    b1 = unknown nx;

					    nnx =   case (uniqtyp_to_typ'  nx)
							#
							typ::EXTENSIBLE_TOKEN (k', t)
							    =>
							    if (same_token (k, k') )
								#
								case (uniqtyp_to_typ' t)    typ::BASETYPE _ =>  t;
										            _               =>  nx;
								esac;
							    else
								nx;
							    fi;

							_ => nx;
						    esac;
					end;

				    hhh ([], nts, ukn)
					=> 
					{   nt = find_or_make_uniqtyp_from_tuple (rk, reverse nts);
					    #
					    if ukn    find_or_make_uniqtyp_from_extensible_token (k, nt);
					    else      nt;
					    fi;
					};
				end;
			    end;

			typ::ARROW (FIXED_CALLING_CONVENTION, [_, _], [_])
			    =>
			    tc;

			typ::ARROW (FIXED_CALLING_CONVENTION, [t1], ts2 as [_])
			    => 
			    {   nt1 = reduce_uniqtyp_to_weak_head_normal_form t1;
				#
				fun ggg z
				    = 
				    {   nz = reduce_uniqtyp_to_weak_head_normal_form z;

					case (uniqtyp_to_typ' nz)
					    #
					    typ::BASETYPE bt
						=> 
						if (hbt::basetype_is_unboxed bt)   find_or_make_uniqtyp_from_extensible_token (k, nz);
						else                         nz;
						fi;

					    _   => nz;
					esac;
				 };

				my (wp, nts1)
				    =
				    case (uniqtyp_to_typ' nt1)
					#
					typ::TUPLE(_, [x, y])
					    =>
					    (FALSE, [ggg x, ggg y]);

					typ::EXTENSIBLE_TOKEN (k', x)
					    => 
					    if (same_token (k, k'))
						#
						case (uniqtyp_to_typ' x)
						    #
						    typ::TUPLE(_, [y, z])
							=> 
							(FALSE, [ggg y, ggg z]);

						    _   =>
							(FALSE, [nt1]);
						esac;
					    else
						(FALSE, [nt1]);
					    fi;

				        _ => (unknown nt1, [nt1]);
				    esac;

				nt = make_arrow_uniqtyp (FIXED_CALLING_CONVENTION, nts1, ts2);

				if wp  find_or_make_uniqtyp_from_extensible_token (k, nt);
				else   nt;
				fi;
			   };

			typ::ARROW (FIXED_CALLING_CONVENTION, _, _)
			    => 
			    bug "unexpected reduceOne on ill-formed FF_FIX arrow types";

			typ::ARROW (VARIABLE_CALLING_CONVENTION { arg_is_raw => b1, body_is_raw => b2 }, ts1, ts2)
			    => 
			    bug "calling reduceOne on VARIABLE_CALLING_CONVENTION arrow types";

			typ::BASETYPE bt
			    => 
			    if (hbt::basetype_is_unboxed bt)   bug "calling reduceOne on an already-reduced whnm";
			    else                         tc;
			    fi;

			typ::EXTENSIBLE_TOKEN (k', t)
			    =>
			    if (same_token (k, k'))   tc;
			    else                            bug "unexpected token in reduceOne";
			    fi;

			(typ::BOXED _ | typ::ABSTRACT _ | typ::PARROW _)
			    => 
			    bug "unexpected tc_box/abs/parrow in reduceOne";

			typ::TYPE_CLOSURE  _ => bug "unexpected typ::TYPE_CLOSURE in reduceOne";
			typ::INDIRECT_TYPE_THUNK _ => bug "unexpected typ::INDIRECT_TYPE_THUNK in reduceOne";

			_ => tc;
		    esac;

	    herein

		wrap_token
		    =
		    register_token
		      { name,
			abbrev,
			reduce_one,
			is_weak_head_normal_form,
			is_known
		      };

	    end;							# End of creating the box token for "tcc_rbox".



	    # Testing if a Uniqtyp is a unknown constructor:
	    #
	    fun uniqtyp_is_unknown  (typ: Uniqtyp)
		=
		not  (uniqtyp_is_known  typ);

	    # *************************************************************************
	    #          RENAMING THE INJECTION AND PROJECTION FUNCTIONS                *
	    # *************************************************************************

	    # Converting plain forms to uniq equivalents -- "injections":
	    #
	    kind_to_uniqkind    =  find_or_make_uniqkind;
	    typ_to_uniqtyp	=  find_or_make_uniqtyp;
	    type_to_uniqtype    =  find_or_make_uniqtype;

	    # Converting from uniq forms back to plain forms -- "projections":
	    #
	    uniqkind_to_kind	=  uniqkind_to_kind'; 
	    uniqtyp_to_typ	=  uniqtyp_to_typ'  o  reduce_uniqtyp_to_weak_head_normal_form;
	    uniqtype_to_type	=  uniqtype_to_type'  o  reduce_uniqtype_to_weak_head_normal_form;

	    # **************************************************************************
	    #          UTILITY FUNCTIONS ON TESTING EQUIVALENCE                        *
	    # **************************************************************************

	    # Testing the equality of values
	    # of Uniqkind, Uniqtyp, Uniqtype

	    # Given: o Two lists x,y
	    #        o A predicate p
	    # Return TRUE iff
	    #    o length(x) == length(y).
	    #    o p (x , y ) is TRUE for all 0 <= i < length(x).
	    #          i   i
	    #
	    fun eqlist p ( x ! xs,
                           y ! ys
                         )                =>   p(x,y)  and  eqlist p (xs,ys);
		eqlist p ([], [])         =>   TRUE;
		eqlist _ _                =>   FALSE;
	    end;

	    # Testing the "pointer" equality on normalized
	    # Uniqkind, Uniqtyp, and Uniqtype:
	    #
	    fun kind_eq   (x: Uniqkind,   y) =   (x == y);
	    fun typ_eq (x: Uniqtyp, y) =   (x == y);
	    fun type_eq   (x: Uniqtype,   y) =   (x == y);

	    # Testing the equivalence for
	    # arbitrary tkinds, typs and ltys:
	    #
	    same_uniqkind
		=
		kind_eq;       #  All tkinds are normalized 

	    stipulate

		# The efficiency of checking FIX equivalence
		# could probably be improved somewhat,
		# but it doesn't seem so bad for my purposes
		# right now.  Anyway, somebody might eventually
		# want to do some profiling and improve this.		XXX BUGGO FIXME
		#                -- Christopher League, 1998-03-24


		#  Profiling code, temporary?? 
		#
		package click {
		    #
		    stipulate   s_unroll      =  cs::make_stat "FIX unrolls";
		    herein	fun unroll () =  cs::add_stat s_unroll 1;
		    end;
		};		#  Click 

		# Unrolling a fix, Uniqtyp -> Uniqtyp 
		#
		fun tc_unroll_fix typ
		    =
		    case (uniqtyp_to_typ' typ)
			#
			typ::RECURSIVE((n, tc, ts), i)
			    =>
			    {   fun genfix i
				    =
				    find_or_make_uniqtyp_from_recursive ((n, tc, ts), i);

				fixes = list::tabulate (n, genfix);
				mu = tc;

				mu = if (null ts)  mu;
				     else          find_or_make_uniqtyp_from_apply (mu, ts);
				     fi;

				mu = find_or_make_uniqtyp_from_apply (mu, fixes);

				mu = if (n==1)  mu;
				     else       find_or_make_uniqtyp_from_proj (mu, i);
				     fi;

				click::unroll();
				mu;
			    };

			 _   => bug "unexpected non-FIX in tc_unroll_fix";
		    esac;


		# In order to check equality of two FIXes, we need to be able to
		# unroll them once, and check equality on the unrolled version, with
		# an inductive assumption that they ARE equal.  The following code
		# supports making and checking these inductive assumptions.
		# Furthermore, we need to avoid unrolling any FIX more than once.
		#
		package tcm							# "tcm" == "tc_map" == "typ_map" == "type constructor mapping"
		    =
		    red_black_map_g (						# red_black_map_g		is from   src/lib/src/red-black-map-g.pkg
			#
			Key = Uniqtyp;
			compare = compare_uniqtyps;
		    );


		# For each type in this dictionary
		# we store a dictionary containing
		# typs that are assumed equivalent to it.
		#
		Eqilk = tcm::Map( Void );
		Hyp   = tcm::Map( Eqilk );


		# The null hypothesis, no assumptions about equality:
		# 
		my empty_eqilk:  Eqilk   =  tcm::empty;
		my null_hyp:     Hyp     =  tcm::empty;


		# Add assumption t1=t2 to current hypothesis.
		# Return composite hypothesis:
		#
		fun assume_eq' (hyp, t1, t1eq_opt, t2)
		    =
		    hyp'
		    where
			t1eq  = case t1eq_opt
				    #
				    THE e =>  e;
				    NULL  =>  empty_eqilk;
				esac;

			t1eq' = tcm::set (t1eq, t2, ());
			hyp'  = tcm::set (hyp, t1, t1eq');
		    end;


		fun assume_eq (hyp, t1, t1eq_opt, t2, t2eq_opt)
		    =
		    assume_eq' (assume_eq' (hyp, t1, t1eq_opt, t2),
				t2, t2eq_opt, t1);


		# Check whether t1=t2 according to the hypothesis 
		#
		my eq_by_hyp:  (Null_Or( Eqilk ), Uniqtyp) -> Bool
		    =
		    fn (NULL,      t2) =>  FALSE;
		       (THE eqilk, t2) =>  not_null (tcm::get (eqilk, t2));
		    end;


		# Have we made any assumptions about `t' already?
		# 
		my visited:  Null_Or(Eqilk) -> Bool 
		    =
		    not_null;


		# Test if two recursive datatypes are equivalent 
		#
		fun eq_fix (eqop1, hyp) (t1, t2)
		    = 
		    case ( uniqtyp_to_typ'  t1,
			   uniqtyp_to_typ'  t2
			 ) 

			( typ::RECURSIVE ((n1, tc1, ts1), i1),
			  typ::RECURSIVE ((n2, tc2, ts2), i2)
			)
			    => 
			    if (not *controls::highcode::check_datatypes)
				TRUE; 
			    else
				t1eq_opt = tcm::get (hyp, t1);

				# First check the induction hypothesis.
				#	
				# We only ever make hypotheses about FIX nodes,
				# so this test is okay here.
				#	
				# If assume_eq appears in other cases, this 
				# test should be lifted outside the switch.
				#	
				if (eq_by_hyp (t1eq_opt, t2))
				    #
				    TRUE;
				    #
				else
				    # Next try structural eq on the components.
				    # I'm not sure why this part is necessary,
				    # but it does seem to be...
				    #                --league, 23 March 1998
				    #
				    (    n1 == n2 and i1 == i2
				    and  eqop1 hyp (tc1, tc2)
				    and  eqlist (eqop1 hyp) (ts1, ts2)
				    )
				    or

				    # Not equal by inspection; we have to unroll it.
				    # We prevent unrolling the same FIX twice by asking
				    # the `visited' function.
				    #
				    if (visited  t1eq_opt)
					#
					FALSE; 
				    else
					t2eq_opt =  tcm::get (hyp, t2);

					if (visited  t2eq_opt)
					    #
					    FALSE; 
					else
					    eqop1 (assume_eq (hyp, t1, t1eq_opt, t2, t2eq_opt))
						  (tc_unroll_fix t1, tc_unroll_fix t2);
					fi;
				    fi;
				fi;
			    fi;

			_ => bug "unexpected types in eq_fix";
		    esac;


		# typs_are_similar, invariant: t1 and t2 are in the weak-head-normal form 
		#     eqop1 is the default equality to be used for typs
		#     eqop2 is used for body of FN, arguments in APPLY,
		#     eqop3 is used for ABS and BOX.
		#     eqop4 is used for arrow arguments and results
		# Each of these first takes the set of hypotheses.
		#
		fun typs_are_similar (eqop1, eqop2, hyp) (t1, t2)
		    = 
		    case ( uniqtyp_to_typ'  t1,
                           uniqtyp_to_typ'  t2
                         )
			#
			(typ::RECURSIVE _, typ::RECURSIVE _)
			    =>
			    eqop2 (eqop1, hyp) (t1, t2);


			(typ::TYPEFUN (ks1, b1), typ::TYPEFUN (ks2, b2))
			    =>
			    eqlist same_uniqkind (ks1, ks2) and eqop1 hyp (b1, b2);


			(typ::APPLY_TYPEFUN (a1, b1), typ::APPLY_TYPEFUN (a2, b2))
			    =>
			    eqop1 hyp (a1, a2) and eqlist (eqop1 hyp) (b1, b2);


			(typ::TYPESEQ ts1, typ::TYPESEQ ts2)
			    =>
			    eqlist (eqop1 hyp) (ts1, ts2);


			(typ::SUM ts1, typ::SUM ts2)
			    =>
			    eqlist (eqop1 hyp) (ts1, ts2);


			(typ::TUPLE (_, ts1), typ::TUPLE (_, ts2))
			    =>
			    eqlist (eqop1 hyp) (ts1, ts2);


			(typ::ABSTRACT a, typ::ABSTRACT b)
			    =>
			    eqop1 hyp (a, b);


			(typ::BOXED a, typ::BOXED b)
			    =>
			    eqop1 hyp (a, b);


			(typ::EXTENSIBLE_TOKEN (k1, t1), typ::EXTENSIBLE_TOKEN (k2, t2))
			    => 
			    same_token (k1, k2) and eqop1 hyp (t1, t2);


			(typ::ITH_IN_TYPESEQ (a1, i1), typ::ITH_IN_TYPESEQ (a2, i2))
			    =>
			    i1 == i2 and eqop1 hyp (a1, a2);

			(typ::ARROW (r1, a1, b1), typ::ARROW (r2, a2, b2))
			    => 
			    r1 == r2 and eqlist (eqop1 hyp) (a1, a2) 
				     and eqlist (eqop1 hyp) (b1, b2);


			(typ::PARROW (a1, b1), typ::PARROW (a2, b2))
			    => 
			    eqop1 hyp (a1, a2) and eqop1 hyp (b1, b2);

			(typ::FATE ts1, typ::FATE ts2)
			    =>
			    eqlist (eqop1 hyp) (ts1, ts2);

			_ => FALSE;
		    esac;


		# General equality for typs:
		#
		fun same_uniqtyp'
                        hyp
                        ( x as REF (_, _, TYPEVARS_AND_NORMEDFLAG { is_normed => TRUE, ... } ),
			  y as REF (_, _, TYPEVARS_AND_NORMEDFLAG { is_normed => TRUE, ... } )
                        )
			=>
			typ_eq (x, y);

		    same_uniqtyp' hyp (x, y)
			=>
			{
			    t1 =  reduce_uniqtyp_to_weak_head_normal_form  x;
			    t2 =  reduce_uniqtyp_to_weak_head_normal_form  y;

			    if (uniqtyp_is_normalized t1
			    and uniqtyp_is_normalized t2)
				#
				typ_eq (t1, t2);
			    else    
				typs_are_similar (same_uniqtyp', fn _ = typ_eq, hyp) (t1, t2);
			    fi;
			};				# fun same_uniqtyp'
		end; 


		# Slightly relaxed constraints (???)
		#
		fun similar_uniqtyps' hyp (x, y)
		    =
		    {   t1 = reduce_uniqtyp_to_weak_head_normal_form x;
			t2 = reduce_uniqtyp_to_weak_head_normal_form y;

			if ( uniqtyp_is_normalized t1  and
			     uniqtyp_is_normalized t2
			)
			    typ_eq (t1, t2);
			else
			    FALSE;
			fi
			or
			(typs_are_similar (similar_uniqtyps', eq_fix, hyp) (t1, t2));
		    };

	    herein

		same_uniqtyp
		    =
		    same_uniqtyp' null_hyp;


		similar_uniqtyps
		    =
		    similar_uniqtyps' null_hyp;
	    end;


	    # lt_eqv_generator, invariant: x and y are in the weak head-normal form
	    #
	    fun lt_eqv_generator (eqop1, eqop2) (x:  Uniqtype, y)
		= 
		seq (x, y)
		where
		    #  seq should be called if t1 and t2 are weak-head normal form 
		    fun seq (t1, t2)
			= 
			case ( uniqtype_to_type'  t1,
			       uniqtype_to_type'  t2
			     )

			    ( type::TYPEAGNOSTIC (ks1, b1),
			      type::TYPEAGNOSTIC (ks2, b2)
			    )
				=>
				(eqlist same_uniqkind (ks1, ks2)) and (eqlist eqop1 (b1, b2));

			    ( type::GENERIC_PACKAGE (as1, bs1),
			      type::GENERIC_PACKAGE (as2, bs2)
			    )
				=> 
				(eqlist eqop1 (as1, as2)) and (eqlist eqop1 (bs1, bs2));

			    ( type::TYP a,
			      type::TYP b
			    )
				=>
				eqop2 (a, b);

			    ( type::PACKAGE s1,
			      type::PACKAGE s2
			    )
				=>
				eqlist eqop1 (s1, s2);

			    ( type::FATE s1,
			      type::FATE s2
			    )
				=>
				eqlist eqop1 (s1, s2);

			    _ => FALSE;
			esac;
		end;
	    #
	    fun same_uniqtype (x:  Uniqtype, y)
		= 
		{   seq = lt_eqv_generator (same_uniqtype, same_uniqtyp); 

		    if  (uniqtype_is_normalized  x
		    and  uniqtype_is_normalized  y)
			#
			type_eq (x, y);
		    else
			t1 = reduce_uniqtype_to_weak_head_normal_form x;
			t2 = reduce_uniqtype_to_weak_head_normal_form y;

			if (uniqtype_is_normalized t1
			and uniqtype_is_normalized t2)
			    type_eq (x, y);
			else
			    seq (t1, t2);
			fi;
		    fi;
		};
	    #
	    fun similar_uniqtypes (x:  Uniqtype, y)
		= 
		{   seq = lt_eqv_generator (similar_uniqtypes, similar_uniqtyps); 

		    if (uniqtype_is_normalized x
		    and uniqtype_is_normalized y)
			#
			(type_eq (x, y)) or (seq (x, y));
			#
		    else
			t1 = reduce_uniqtype_to_weak_head_normal_form x;
			t2 = reduce_uniqtype_to_weak_head_normal_form y;

			if  (uniqtype_is_normalized t1
			and  uniqtype_is_normalized t2
			    )  
			    (type_eq (t1, t2)) or (seq (t1, t2));
			else
			    seq (t1, t2);
			fi;
		    fi;
		};



	    #####################################################################################
	    # Test equivalence of recordflag and calling-convention records

	    #
	    fun same_callnotes ( VARIABLE_CALLING_CONVENTION { arg_is_raw => b1,  body_is_raw => b2  },
                                 VARIABLE_CALLING_CONVENTION { arg_is_raw => b1', body_is_raw => b2' } )
		    =>
		    b1 == b1' and b2 == b2';

		same_callnotes ( FIXED_CALLING_CONVENTION,
                                 FIXED_CALLING_CONVENTION )
		    =>
		   TRUE;

		same_callnotes ( (FIXED_CALLING_CONVENTION, VARIABLE_CALLING_CONVENTION _)
			       | (VARIABLE_CALLING_CONVENTION _, FIXED_CALLING_CONVENTION) )
		    =>
		    FALSE;
	    end;
	    #	
	    fun same_recordflag (USELESS_RECORDFLAG, USELESS_RECORDFLAG)
		=
		TRUE;



	    ###########################################################################
	    #  UTILITY FUNCTIONS ON FINDING OUT THE DEPTH OF THE FREE TYC VARIABLES
	    ###########################################################################

	    # finding out the innermost naming depth for a Typ's free variables 
	    #
	    fun max_freevar_depth_in_uniqtyp (x, d)
		=
		{   typevars =   get_free_typevars_of_uniqtyp (reduce_uniqtyp_to_normal_form x); 
				#			
				#  Unfortunately we have to reduce everything to the normal form
				#	 before we can talk about its list of free type variables.

		    case typevars
			#
			THE []      =>   di::top;
			THE (a ! _) =>   d + 1 - (#1 (unpack_debruijn_typevar a));
			#
			NULL        =>   bug "unexpected case in max_freevar_depth_in_uniqtyp";
		    esac;
		};

	    #
	    fun max_freevar_depth_in_uniqtyps ([],    d) =>   di::top;
		max_freevar_depth_in_uniqtyps (x ! r, d) =>   int::max (max_freevar_depth_in_uniqtyp (x, d), max_freevar_depth_in_uniqtyps (r, d));
	    end;


	    # These return the list of free NAMED type_variables 
	    #
	    fun get_free_named_variables_in_uniqtyp (typ: Uniqtyp)
		=
		case (get_typevars_and_normedflag (reduce_uniqtyp_to_normal_form typ))   
		    #
		    TYPEVARS_AND_NORMEDFLAG { named_typevars, ... } =>  named_typevars;
		    TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE             =>  bug "unexpected case in get_free_named_variables_in_uniqtyp";
		esac;

	    #
	    fun get_free_named_variables_in_uniqtype (type: Uniqtype)
		= 
		case (get_typevars_and_normedflag (reduce_uniqtype_to_normal_form  type))
		    #
		    TYPEVARS_AND_NORMEDFLAG { named_typevars, ... } =>  named_typevars;
		    TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE             =>  bug "unexpected case in get_free_named_variables_in_uniqtype";
		esac;


	end;										# stipulate 
    };											# package highcode_uniq_types 
