	    #
	    fun foldmerge_typevars_and_normedflag []  =>  base_typevars_and_normedflag;
		foldmerge_typevars_and_normedflag [x] =>  get_typevars_and_normedflag x;
		#
		foldmerge_typevars_and_normedflag xs
		    => 
		    loop (xs, base_typevars_and_normedflag)
		    where
			fun loop ([], z)
				=>
				z;

			    loop(_, TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE)
				=>
				TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE;

			    loop (a ! r, z)
				=>
				loop (r, merge_typevars_and_normedflag (get_typevars_and_normedflag a, z));
			end;
		    end;
	    end;

	    #
	    fun exit_typevars_and_normedflag (TYPEVARS_AND_NORMEDFLAG { is_normed, free_typevars, named_typevars })
		    =>
		    TYPEVARS_AND_NORMEDFLAG
		      {
			is_normed,
                        free_typevars =>  exit_level  free_typevars,
                        named_typevars
                      };

		exit_typevars_and_normedflag  typevars_and_normedflag
		    =>
		    typevars_and_normedflag;
	    end;

	    #
	    fun make_typevars_and_normedflag_for_typ  (typ:  Typ)
		= 
		g typ
		where
		    fun g (typ::DEBRUIJN_TYPEVAR (debruijn_depth, debruijn_index))
			    =>
			    TYPEVARS_AND_NORMEDFLAG
			      {
				is_normed      => TRUE,
				free_typevars  =>  [ pack_debruijn_typevar (debruijn_depth, debruijn_index) ],
                                named_typevars =>  []
                              };

			g (typ::NAMED_TYPEVAR v)
			    =>
			    TYPEVARS_AND_NORMEDFLAG
			      {
				is_normed      =>  TRUE,
				free_typevars  =>  [],
				named_typevars =>  [v]
			      };
			#
			g (typ::BASETYPE pt) => base_typevars_and_normedflag;
			#
			g (typ::APPLY_TYPEFUN  (REF(_, typ::TYPEFUN _, TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE), _)) =>  TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE;
			g (typ::ITH_IN_TYPESEQ (REF(_, typ::TYPESEQ _, TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE), _)) =>  TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE;
			#
			g (typ::APPLY_TYPEFUN  (REF(_, typ::TYPEFUN _, TYPEVARS_AND_NORMEDFLAG { free_typevars, named_typevars, ... }), ts))
			    => 
			    merge_typevars_and_normedflag (TYPEVARS_AND_NORMEDFLAG { is_normed => FALSE, free_typevars, named_typevars }, foldmerge_typevars_and_normedflag ts);	#  ? 
			#
			g (typ::ITH_IN_TYPESEQ (REF(_, typ::TYPESEQ _, TYPEVARS_AND_NORMEDFLAG { free_typevars, named_typevars, ... }), _))
			    => 
			    TYPEVARS_AND_NORMEDFLAG { is_normed => FALSE, free_typevars, named_typevars };								#  ? 
			#
			g (typ::APPLY_TYPEFUN (t, ts))		=> foldmerge_typevars_and_normedflag (t ! ts);
			g (typ::TYPESEQ ts       )		=> foldmerge_typevars_and_normedflag ts;
			g (typ::SUM ts       )			=> foldmerge_typevars_and_normedflag ts;
			#
			g (typ::TYPEFUN (ks, t)   )		=> exit_typevars_and_normedflag (get_typevars_and_normedflag t);
			g (typ::ITH_IN_TYPESEQ (t, _)  )	=> get_typevars_and_normedflag t;
			#
			g (typ::RECURSIVE((_, t, ts), _))
			    => 
			    {   ax = get_typevars_and_normedflag t;
				#
				case ax
				    #
				    TYPEVARS_AND_NORMEDFLAG { free_typevars => [], named_typevars => [], ... }
					=>
					merge_typevars_and_normedflag (ax, foldmerge_typevars_and_normedflag ts);

				    TYPEVARS_AND_NORMEDFLAG _            =>  bug "unexpected RECURSIVE freevars in make_typevars_and_normedflag_for_typ";
				    TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE  =>  TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE;
				esac;
			    };

			g (typ::ABSTRACT t)		=> get_typevars_and_normedflag t;
			g (typ::BOXED    t)		=> get_typevars_and_normedflag t;
			#
			g (typ::TUPLE (_, ts))		=> foldmerge_typevars_and_normedflag ts;
			g (typ::ARROW (_, ts1, ts2))	=> foldmerge_typevars_and_normedflag (ts1@ts2);
			g (typ::PARROW (t1, t2))	=> foldmerge_typevars_and_normedflag [t1, t2];
			#
			g (typ::EXTENSIBLE_TOKEN (k, (REF(_, t, TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE))))
			    =>
			    TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE;

			g (typ::EXTENSIBLE_TOKEN (k, (x as REF(_, t, TYPEVARS_AND_NORMEDFLAG { is_normed, free_typevars, named_typevars } ))))
			    => 
			    TYPEVARS_AND_NORMEDFLAG
			      {
				is_normed => (token_whnm k x) and is_normed,
				free_typevars,
				named_typevars
			      };

			g (typ::FATE          ts) =>  foldmerge_typevars_and_normedflag ts;

			g (typ::INDIRECT_TYPE_THUNK _) =>  bug "unexpected INDIRECT in make_typevars_and_normedflag_for_typ";
			g (typ::TYPE_CLOSURE        _) =>  TYPEVARS_AND_NORMEDFLAG_UNAVAILABLE;
		    end;
		end; 

