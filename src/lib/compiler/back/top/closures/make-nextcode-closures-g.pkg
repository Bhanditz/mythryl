	##########################################################################
	#                  VARIABLE ACCESS PATH LOOKUP
	##########################################################################

	# Simulating the OFFSET operation
        # by reconstructing the closures:
	#
	fun offset ( (z, CLOSURE_REP (n, { functions, values, closures, ... } )), i, u, x, dictionary)
            = 
	    {   # Invariant: length functions > 1 

		my (_, l)  =  list::nth (functions, n+i);                          

		case u
		    #
		    fcf::VAR z'
			=>
			if  (z != z')  bug "unexpected case in offset 1";   fi;

	             _   =>            bug "unexpected case in offset 2";
                esac;

		lab   =   (fcf::LABEL l, offp0);

		vl  = 
		    case (closures, values) 
			#
		        (([(v, _)], []) | ([], [v]))   =>   [lab, (fcf::VAR v, offp0)];
		        ([], [])                       =>   [lab];
		        _                              =>   bug "unexpected case in offset 3";
                    esac;

		my (header, dictionary)
                    =
                    record_el (fcf::rk::ESCAPE, vl, x, dictionary);
	    
                (header, dictionary);
	    }

	# If no_offset is FALSE, use this version
        #
	#   fun offset (_, i, record, name, dictionary)
        #       =
	#       {   header =   fn next =  fcf::GET_ADDRESS_OF_FIELD_I { i, record, name, next };
        #          (header, dictionary);
	#       };


	# Build the header by partially 
        # following an access path:

	also
	fun pfollow (p, dictionary, header)
            =
	    case p
		#
		(v, np as ((fcf::SLOT 0)   |   (fcf::VIA_SLOT(_, fcf::SLOT 0))), [])
		    =>
		    ((fcf::VAR v, np), dictionary, header);

		(v, np as (fcf::SLOT i), [c as (_, cr as CLOSURE_REP (n, z))])
		    => 
		    {   w           =  closure_lvar ();
			my (nh, dictionary)  =  offset (c, i, fcf::VAR v, w, dictionary);
			dictionary        =  augment ((w, CLOSURE (CLOSURE_REP (n+i, z))), dictionary);

			((fcf::VAR w, fcf::SLOT 0), dictionary, header o nh);
		    };

		(v, fcf::VIA_SLOT (i, np),   (name, cr) ! z)
		    => 
		    {   dictionary =   augment ((name, CLOSURE cr), dictionary);
			nhdr       =   fn next =  fcf::GET_FIELD_I { i, record => fcf::VAR v, name, type => fcf::bogus_pointer_type, next };
			#
			pfollow ((name, np, z), dictionary, header o nhdr);
		    };

		_ => bug "pfollow on an inconsistent path";
	    esac


	# Build the header by 
        # following an access path:

	also
	fun follow (rootvar, type)
            =
            g
            where  
		#
	        fun g ((v, fcf::SLOT 0, []), dictionary, h)
			=>
			(dictionary, h o (fn next = fcf::GET_ADDRESS_OF_FIELD_I { i => 0, record => fcf::VAR v, name => rootvar, next }));

		    g ((v, fcf::SLOT i, [c]), dictionary, h)
			=>
			{   my (nh, dictionary)   =   offset (c, i, fcf::VAR v, rootvar, dictionary);

			    #  Dictionary is updated by the client of "follow" 

			    (dictionary, h o nh);
			};

		    g ((v, fcf::VIA_SLOT (i, fcf::SLOT 0), []), dictionary, h)
			=>
			(dictionary, h o (fn next = fcf::GET_FIELD_I { i, record => fcf::VAR v, name => rootvar, type, next }));

		    g ((v, fcf::VIA_SLOT (i, p), (name, cr) ! z), dictionary, h)
			=>
			{   dictionary = augment ((name, CLOSURE cr), dictionary);
			    #
			    g ( (name, p, z),
                                dictionary,
                                h  o  (fn next =  fcf::GET_FIELD_I {  i,  record => fcf::VAR v,  name,  type => fcf::bogus_pointer_type,  next })
                              );
			}; 

		    g _ => bug "follow on an inconsistent path";

                end;
	    end

	##########################################################################
	# recordEl finds the complete access paths for elements of a record.
	# It returns a header for profiling purposes if needed.
	##########################################################################

	also
	fun record_el (kind, l, name, dictionary)
            =
	    {   fun g (u as (fcf::VAR v, fcf::SLOT 0), (l, cl, header, dictionary))
                    =>
		    {   dictionary = case  (what_is (dictionary, v))		# May be unnecessary 
				         #			          
					 CLOSURE cr =>   save_frames (v, cr, dictionary);
					 _          =>   dictionary;
				     esac;

			my (m, cost, nhdr, dictionary)
                            =
                            case (where_is (dictionary, v))
				#			      
			        DIRECT => (u, 0, header, dictionary);
				#
			        PATH (np as (start, path, _))
				    => 
				    {   n = fcf::lenp path;

					nhdr =  if *cgo::static_closure_size_profiling
						    #
						    sprof::incln  n;

						    header o (fn next =  fcf::STORE_TO_RAM { op   =>  fcf::p::ACCLINK,
                                                                                             args =>  [fcf::INT n, fcf::VAR start],
                                                                                             next
                                                                                           }
                                                             );
						else
						    header;
						fi;

					my (u, dictionary, nhdr)
					    = 
					    if (*cgo::sharepath)
						#
						pfollow (np, dictionary, nhdr);
					    else
						((fcf::VAR start, path), dictionary, nhdr);
					    fi;

					(u, n, nhdr, dictionary);
				    };

                            esac;
		    
                        (m ! l, cost ! cl, nhdr, dictionary);
		    };

		    g (u as (fcf::VAR _, _), _) => bug "unexpected case in recordEl";
		    g (u, (l, cl, header, dictionary))  => (u ! l, 0 ! cl, header, dictionary);
                end;

		my (fields, cl, header, dictionary)
                    =
                    fold_right   g   (NIL, NIL, fn ce => ce; end, dictionary)   l;

		header =    if (*cgo::allocprof)   header o (prof_rec_links cl);
			    else			 header;
			    fi;

		nhdr =    fn next =  header (fcf::DEFINE_RECORD { kind, fields, name, next });
	    
                (nhdr, dictionary);
	    };

	############################################################################
	# fix_access finds the access path to a variable.  A header to select the
	# variable from the dictionary is returned, along with a new dictionary
	# that reflects the actions of the header (this last implements a "lazy
	# display").  fixAccess actually causes renamings -- the variable
	# requested is rebound if it is not immediately available in the
	# dictionary, these renamings are later eliminated by an "unrebind" pass
	# which basically does the alpha convertions.
	#
	fun fix_access (args, dictionary)
            = 
            fold_right   access   (dictionary, fn x => x; end )   args
            where
		#
	        fun access (fcf::VAR rootvar, (dictionary, header))
			=>
			{   what = what_is (dictionary, rootvar);

			    my (dictionary, t)
				=
				case what 
				    #
				    VALUE x     =>  (dictionary, x);
				    CLOSURE cr  =>  (save_frames (rootvar, cr, dictionary), fcf::bogus_pointer_type);
				    _           =>  bug "Callee or Known in fixAccess closure";
                                esac;


			    case (where_is (dictionary, rootvar))
				#
				DIRECT => (dictionary, header);
				#
				PATH (p as (_, path, _))
				    =>
				    {   my (dictionary, header)
					    =
					    follow (rootvar, t) (p, dictionary, header);

					dictionary = augment ((rootvar, what), dictionary);
					#
					fun prof_l (n)
					    = 
					    if (not *cgo::allocprof)
						#
						if (n > 0   and   *cgo::static_closure_size_profiling)
						    #
						    sprof::incln (n);

						    fn next =  fcf::STORE_TO_RAM { op   =>  fcf::p::ACCLINK,
                                                                                   args =>  [fcf::INT n, fcf::VAR rootvar],
                                                                                   next
                                                                                 };
						else
						    fn ce = ce;
						fi;
					    else
						prof_links  n;
					    fi;

					( dictionary,
					  header o prof_l (fcf::lenp path)
					);
				    };
			    esac;
			};

		    access (_, y) => y;
                end;
	    end;

	##########################################################################
	# fixArgs is a slightly modified version of fixAccess. It's used to find
	# the access path of function arguments in the APPLY expressions
	#
	fun fix_args (args, dictionary)
            =
            fold_right   access   ([], dictionary, fn x = x)   args
            where
	        fun access (z as (fcf::VAR rootvar), (result, dictionary, h))
			=>
			{   what = what_is (dictionary, rootvar);

			    my (dictionary, t)
				=
				case what 
				    #
				    VALUE x    =>  (dictionary, x);
				    CLOSURE cr =>  (save_frames (rootvar, cr, dictionary), fcf::bogus_pointer_type);
				    _          =>  (dictionary, fcf::bogus_pointer_type);
                                esac;


			    case what
				#
				FUNCTION _   =>   bug "Known in fixArgs make-nextcode-closures-g.pkg";

				CALLEE (l, csg, csf)
				    => 
				    {   nargs = (l ! csg)@csf@result;

					my (dictionary, header)   =   fix_access (nargs, dictionary);

					(nargs, dictionary, h o header);
				    };


			       _ =>     case (where_is (dictionary, rootvar))
					    #
					    DIRECT   =>   (z ! result, dictionary, h);
					    #
					    PATH (p as (_, path, _))
						=>
						{   my (dictionary, header)
							=
							follow (rootvar, t) (p, dictionary, h);

						    dictionary = augment ((rootvar, what), dictionary);
						    #
						    fun prof_l (n)
							= 
							if (not *cgo::allocprof)
							    #
							    if (n > 0   and   *cgo::static_closure_size_profiling)
								#
								sprof::incln (n);

								fn next =  fcf::STORE_TO_RAM { op   =>  fcf::p::ACCLINK,
                                                                                               args => [fcf::INT n, fcf::VAR rootvar],
                                                                                               next
                                                                                             };
							    else
								fn ce = ce;
							    fi;
							else
							    prof_links  n;
							fi;


						    (z ! result, dictionary, header o prof_l (fcf::lenp path));
						};
					esac;
			     esac;
			};

		    access (z, (result, dictionary, h))
			=>
			(z ! result, dictionary, h);
                end;
	    end; 

