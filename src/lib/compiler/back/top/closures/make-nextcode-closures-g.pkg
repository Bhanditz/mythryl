		    if   (x2 < x1)    u2 ! (h (l1, r2));
		    elif (x2 > x1)          h (r1, l2);
		    else                    h (r1, r2);
                    fi;

		    h ([], l2) =>  l2;
		    h (l1, []) =>  [];
                end;
	    end;

