                    s (arg, NIL)
                    where
		        fun s (a ! r, l)
                                =>
                                test a   ??   s (r,  a ! l)
                                         ::   s (r,      l);

			    s (NIL,   l)
                                =>
                                reverse l;
                        end;
		    end;
	    end;
