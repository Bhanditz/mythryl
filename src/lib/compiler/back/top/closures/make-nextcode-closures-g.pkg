	fun dispose_frames (dictionary)
            = 
	    if mp::quasi_stack
		#
		vl = dead_frames (dictionary);

		my (dictionary, header)
		    =
		    fix_access (map fcf::VAR vl, dictionary);
		#
		fun g (v ! r, h)
			=>
			g (r, h o (fn next = fcf::STORE_TO_RAM { op   =>  fcf::p::FREE,
                                                                 args => [fcf::VAR v],
                                                                 next
                                                               }
                          )       );

		    g ([], h)
			=>
			if (*cgo::allocprof)   ((prof_ref_cell (length vl)) o header o h);
			else			     header o h;
			fi;
		end;

		(dictionary, g (vl, header));
	    else
                (dictionary, fn ce = ce);
            fi;

