		#
		fun ludfud2 ((_, m, v), (_, n, w))
                    = 
		    (m >  n)   or
                    (m == n and v < w);

		nl = map (fn (u as (v, _, _)) = (u, h u, v))
                         l;
	    
                map #1 (list_mergesort::sort ludfud2 nl);
	    };

