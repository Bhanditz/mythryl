	# Check if ok to share with
        # some closures in the
        # enclosing dictionary:
	#
	fun thin_free (vfree, vlen, closlist, limit)
            = 
	    {   fun g (v, (l, m, n))
                    = 
		    if   (member3 vfree v   )   (v ! l, m+1, n);
                    else                        (    l, m, n+1);
                    fi;
		#
		fun h ((v, cr as CLOSURE_REP (_, { free, ... } )), x)
                    = 
		    {   my (zl, m, n)
                            =
                            fold_right   g   ([], 0, 0)   free;
		    
                        if (m < limit)                       x;
                        else            (v, zl, m*10000-n) ! x;
                        fi; 
		    };
		#
		fun worse ((_, _, i), (_, _, j))
                    =
                    i < j; 
		#
		fun m ([], s, r, k)
                        =>
                        (s, r);

		    m((v, x, _) ! y, s, r, k)
			=> 
			if (k < limit)
			    #			    
			    (s, r);
			else
			    my (nx, i, n, len)
			       =
			       accum_v (x, r);

			    if (len < limit)
				#
				m (y, s, r, k);
			    else
				m ( y,
				    add_v ([v], i, n, s),
				    remove_v (nx, r),
				    k - len
				  );
			    fi;
                        fi;
                end;

		clist =   list_mergesort::sort worse (fold_right h [] closlist);
	    
                m (clist, [], vfree, vlen);
	    };
	#
	fun thin_fp_free (free, closlist)
            =
            thin_free (free, length free, closlist, 1);

	#
	fun thin_gp_free (free, closlist)
            =
	    {   len = length free;

		my (spill, free)
                    = 
		    if (len <= 1)   ([], free);
		    else            thin_free (free, len, closlist, int::min (3, len));
                    fi;
	    
                merge_v (spill, free);
