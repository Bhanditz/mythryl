stipulate
    package xc =  xclient;				# xclient		is from   src/lib/x-kit/xclient/xclient.pkg
    package wg =  widget;				# widget		is from   src/lib/x-kit/widget/basic/widget.pkg
#   package v  =  ml_source_code_viewer;		# ml_source_code_viewer	is from   src/lib/x-kit/widget/fancy/graphviz/text/show-graph-code-viewer.pkg
    package mv =  ml_viewer;				# ml_viewer		is from   src/lib/x-kit/widget/fancy/graphviz/text/show-graph.pkg
herein

    fun go display
        =
	loop ()
        where
	    root = wg::make_root  display;

	    fun open_view fname
                =
		mv::open_viewer  root
                  {
                    file   =>  fname,
                    module =>  "Foo",
                    loc    =>  0,
                    range  =>  NULL
                  };

	    fun quit ()
		=
                {   wg::delete_root_window root;
                    shut_down_thread_scheduler();
		};

	    fun strip "" =>  "";
	        strip s  =>  substring (s, 0, size s - 1);
            end;

	    fun loop ()
                =
                case (strip (cio::read_line cio::std_in)
		    #
		    ""     => quit();
		    "quit" => quit();
		    s      => {  open_view s;   loop();  };
		esac;

	end;
end;					# stipulate

fun do_it  display
    =
    start_up_thread_scheduler
      ( \\ () = go display,
        THE 10
      );

