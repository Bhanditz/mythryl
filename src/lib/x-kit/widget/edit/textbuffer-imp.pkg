	fun make_textbuffer_egg
	      (textbuffer_arg:		Textbuffer_Arg)												# PUBLIC. PHASE 1: Construct our state and initialize from 'options'.
	    =
	    {	textbuffer_arg ->  (textbuffer_options);											# Currently no editboss_needs component, so this is a no-op.
		#
		(process_options
		  ( textbuffer_options,
		    { name		=> "textbuffer",
		      id		=>  id_zero
		    }
		) )
		    ->
		    { name,
		      id
		    };
	
		my (id, textbuffer_options)
		    =
		    if (id_to_int(id) == 0)
			id = issue_unique_id();													# Allocate unique imp id.
			(id, ID id ! textbuffer_options);											# Make our id stable across stop/restart cycles.
		    else
			(id, textbuffer_options);
		    fi;

		textbuffer_arg =  textbuffer_options;												# Currently no editboss_needs component, so this is a no-op.

		me =	{ state       =>  REF textstate,
			  history     =>  REF que::empty_queue,
			  max_history =>  REF 100,
			  filename    =>  REF NULL,
			  buffername  =>  REF "",
			  dirty	      =>  REF FALSE	
			}
			where
			    textstate =   { textlines =>  nl::singleton "",
					    cursor    =>  { row => 0, col => 0 },
					    mark      =>  { row => 0, col => 0 }
					  };
			end;

		\\ () = {   reply_oneshot = make_oneshot_maildrop():  Oneshot_Maildrop( (Me_Slot, Exports) );					# PUBLIC. PHASE 2: Start our microthread and return our Exports to caller.
			    #
			    xlogger::make_thread  name  (startup  (id, reply_oneshot));								# Note that startup() is curried.

			    (get_from_oneshot  reply_oneshot) -> (me_slot, exports);

			    fun phase3														# PUBLIC. PHASE 3: Accept our Imports, then wait for Run_Gun to fire.
				(
				  imports:	Imports,
				  run_gun':	Run_Gun,	
				  end_gun':	End_Gun
				)
				=
				{
				    put_in_mailslot  (me_slot, { me, textbuffer_arg, imports, run_gun', end_gun' });
				};

			    (exports, phase3);
			};
	    };
    };

