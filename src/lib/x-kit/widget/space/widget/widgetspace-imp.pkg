		    =
		    map  get_colth  grid
		    where
			fun get_colth (row: List( gt::Rg_Widget_Widget ))
			    =
			    list::nth (row, col);
		    end;

		fun grid_cols (grid:	List( List( gt::Rg_Widget_Widget ) ))							# Return all columns in grid.
