#
# Bounce_Space_Layout_Hint gets its own little package to avoid circular package dependencies.

# Compiled by:
#     src/lib/x-kit/widget/xkit-widget.sublib



stipulate
    include threadkit;										# threadkit				is from   src/lib/src/lib/thread-kit/src/core-thread-kit/threadkit.pkg
herein

    # This package is used in:
    #
    #     src/lib/x-kit/widget/space/bounce/bounce-space-imp.pkg
    #
    package bounce_space_layout_hint {
	#
	Bounce_Space_Layout_Hint
	  #
	  = SHARE Float										# Default 1.0;  2.0 means give the widget twice as big a share of available screen real estate as SHARE 1.0 widgets.
	  ;
    };												# package bounce_space;
end;




