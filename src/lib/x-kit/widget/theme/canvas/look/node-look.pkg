    package node_look {
	#
	Node_Look
	  =
	  { id:			iul::Id,							# Unique id to facilitate storing node_state instances in indexed datastructures like red-black trees.
	    pass_something:	Replyqueue -> (Int -> Void) -> Void,
	    do_something:	Int -> Void
	  };

	Node_Look_Option
	    #
	    = MICROTHREAD_NAME		String							# 
	    | ID			iul::Id							# Unique ID for imp, issued by issue_unique_id::issue_unique_id().
	    | WIDGET_CONTROL_CALLBACK	c2l::Canvas_To_Look -> Void				# Gui boss registers this callback to get a port to us once we start up.
	    | NODE_LOOK_CALLBACK	(        Node_Look -> Void	)			# App      registers this maildrop to get a port to us once we start up.
	    ;

	Node_Look_Arg    =  List(Node_Look_Option);						# Currently no mandatory component.
    };												# package node_look;
end;




