	fun startup													# Root fn of imp microthread.
	      ( id:		Id,
		reply_oneshot:  Oneshot_Maildrop( (Me_Slot, Exports, ss::Slider_State_Needs -> Void) )
	      )
	      ()													# Note currying.
	    =
	    {   me_slot  =  make_mailslot  ()	:  Me_Slot;
		#
		packed_to_look		=  { id, do_something, pass_something, pass_draw_done_flag };
		gui_to_look		=  { id, start_of_frame };
		xslider_look		=  { id, do_something, pass_something };

		exports			=  { gui_to_look, packed_to_look };

		to          =  make_replyqueue();
		#
		put_in_oneshot (reply_oneshot, (me_slot, exports, note_new_state));					# Return value from make_xslider_look().

		(take_from_mailslot  me_slot)										# Input args from configure_default_xslider_look_for_x().
		    ->
		    { me, xslider_look_arg, imports, run_gun', end_gun', look_endstate_oneshot,
