	    end;


	fun process_options
	    ( options: List(Xslider_Look_Option),
	      #
	      { name,
		id,
	        xslider_look_callbacks,
	        widget_control_callbacks
	      }
	    )
	    =
	    {   my_name				=  REF name;
		my_id				=  REF id;
		my_xslider_look_callbacks	=  REF xslider_look_callbacks;
		my_widget_control_callbacks	=  REF widget_control_callbacks;
		#
		apply  do_option  options
		where
		    fun do_option (MICROTHREAD_NAME        n) =>   my_name			:=  n;
			do_option (ID      	           i) =>   my_id                   	:=  i;
			#
			do_option (WIDGET_CONTROL_CALLBACK c) =>   my_widget_control_callbacks	:=  c ! *my_widget_control_callbacks;
			do_option (XSLIDER_LOOK_CALLBACK   c) =>   my_xslider_look_callbacks	:=  c ! *my_xslider_look_callbacks;
		    end;
		end;

		{ name			   =>  *my_name,
		  id 			   =>  *my_id,
		  xslider_look_callbacks   =>  *my_xslider_look_callbacks,
		  widget_control_callbacks =>  *my_widget_control_callbacks
		};
	    };


        ##########################################################################################
	# External entrypoints
	#
	fun make_xslider_egg												# PUBLIC. PHASE 1: Construct our state and initialize from 'options'.
	      (
#		appwindow:		aw::Appwindow,
		slider_arg:		ss::Slider_Arg,
		xslider_look_arg:	Xslider_Look_Arg,
# XXX SUCKO FIXME look_to_packed is not yet used anywhere.
		look_to_packed:		l2p::Look_To_Packed,
		state_endstate_oneshot:	Null_Or(Oneshot_Maildrop( ss::Slider_Arg)),					# gui-boss uses this to capture final state of state-imp when endgun fires.
		 look_endstate_oneshot: Null_Or(Oneshot_Maildrop(Xslider_Look_Arg))					# gui-boss uses this to capture final state of  look-imp when endgun fires.
	      )
	    =
	    {
		slider_arg       -> (slider_state_needs, slider_state_options);
		xslider_look_arg -> (		         xslider_look_options);

		(process_options
		  ( xslider_look_options,
		    { name			=>  "xslider_look",
		      id			=>  id_zero,
		      xslider_look_callbacks	=>  [],
		      widget_control_callbacks	=>  []
		    }
		) )
		    ->
		    { name,
		      id,
		      xslider_look_callbacks,
		      widget_control_callbacks
		    };
	
		my (id, xslider_look_options)
		    =
		    if (id_to_int(id) == 0)
			id = issue_unique_id();										# Allocate unique imp id.
			(id, ID id ! xslider_look_options);								# Make our id stable across stop/restart cycles.
		    else
			(id, xslider_look_options);											# Nop.
		    fi;

		xslider_look_arg = (xslider_look_options);

		me = { id, state => REF slider_state_needs };

		slider_state_egg =  ssi::make_slider_state_egg  slider_arg  state_endstate_oneshot;

		fn () = {   reply_oneshot										# PUBLIC. PHASE 2: Start our microthread and return our Exports to caller.
				=
				make_oneshot_maildrop ()
				:    Oneshot_Maildrop( (Me_Slot, Exports, ss::Slider_State_Needs -> Void) );

			    xlogger::make_thread  name  (startup  (id, reply_oneshot));					# Note that startup() is curried.

			    (get_from_oneshot  reply_oneshot) -> (me_slot, exports, note_new_state);

			    (slider_state_egg ()) -> (slider_state_exports, slider_state_egg');

			    fun phase3											# PUBLIC. PHASE 3: Accept our Imports, then wait for Run_Gun to fire.
				(
				  imports:	Imports,
				  run_gun':	Run_Gun,	
				  end_gun':	End_Gun
				)
				=
				{   slider_state_imports = { state_sink => note_new_state };
				    #
				    slider_state_egg' (slider_state_imports, run_gun', end_gun');

				    put_in_mailslot  (me_slot, { me, xslider_look_arg, imports, run_gun', end_gun', look_endstate_oneshot,
							         xslider_look_callbacks,
							         widget_control_callbacks
							       }
						     );
				};

			    (exports, phase3);
			};
	    };

	fun pprint_xslider_look_arg
	      (pp:			pp::Prettyprint_Mill)
	      (xslider_look_arg:	Xslider_Look_Arg)
	    =
	    {
		xslider_look_arg
		  ->
		  ( options:	List(Xslider_Look_Option)
		  );

		pp.box {.
		    pp.txt " [";
		    pp::seq {. pp.txt ", "; }
			    pprint_option
			    options
			    ;	
		    pp.txt " ]";
		};
	    }
	    where
		fun pprint_option option
		    =
		    case option
			#
			MICROTHREAD_NAME name		=>  {  pp.lit (sprintf "MICROTHREAD_NAME \"%s\"" name);		};
			ID			id	=>  {  pp.lit (sprintf "ID %d" (id_to_int id)        );		};
			WIDGET_CONTROL_CALLBACK _	=>  {  pp.lit          "WIDGET_CONTROL_CALLBACK (callback)";	};
			XSLIDER_LOOK_CALLBACK _		=>  {  pp.lit          "XSLIDER_LOOK_CALLBACK (callback)";	};
		    esac;
	    end;
    };

