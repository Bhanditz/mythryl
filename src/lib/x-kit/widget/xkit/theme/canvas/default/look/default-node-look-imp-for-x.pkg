				    #
				    node_state_egg' (node_state_imports, run_gun', end_gun');

				    put_in_mailslot  (me_slot, { me, imports, run_gun', end_gun', endstate_oneshot,
								 node_look_callbacks,
								 widget_control_callbacks
							       }
						     );
				};

			    (exports, phase3);
			};
	    };


