	# External entrypoints
	#
	fun make_ball_egg												# PUBLIC. PHASE 1: Construct our state and initialize from 'options'.
	      (
#		appwindow:		aw::Appwindow,
		ball_arg:		bs::Ball_Arg,
		ball_look_arg:		Ball_Look_Arg,
# XXX SUCKO FIXME look_to_bounce is not yet used anywhere.
		look_to_bounce:		l2b::Look_To_Bounce,
		state_endstate_oneshot:	Null_Or(Oneshot_Maildrop( bs::Ball_Arg )),					# gui-boss uses this to capture final state of state-imp when endgun fires.
		 look_endstate_oneshot: Null_Or(Oneshot_Maildrop( Ball_Look_Arg ))					# gui-boss uses this to capture final state of  look-imp when endgun fires.
	      )
	    =
	    {
		ball_look_arg -> (		    ball_look_options);
		ball_arg      -> (ball_state_needs, ball_state_options);

		(process_options
		  ( ball_look_options,
		    { name			=>  "ball_look",
		      id			=>  id_zero,
		      ball_look_callbacks	=>  [],
		      widget_control_callbacks	=>  []
		    }
		) )
		    ->
		    { name,
		      id, 
		      ball_look_callbacks,
		      widget_control_callbacks
		    };
	
		my (id, ball_look_options)
		    =
		    if (id_to_int(id) == 0)
			id = issue_unique_id();										# Allocate unique imp id.
			(id, ID id ! ball_look_options);								# Make our id stable across stop/restart cycles.
		    else
			(id, ball_look_options);									# Nop.
		    fi;

		ball_look_arg = (ball_look_options);

		me = { id, state => REF ball_state_needs };

		ball_state_egg =  bsi::make_ball_state_egg  ball_arg  state_endstate_oneshot;

		fn () = {   reply_oneshot										# PUBLIC. PHASE 2: Start our microthread and return our Exports to caller.
				=
				make_oneshot_maildrop ()
				:    Oneshot_Maildrop( (Me_Slot, Exports, bs::Ball_State_Needs -> Void) );

			    xlogger::make_thread  name  (startup  (id, reply_oneshot));					# Note that startup() is curried.

			    (get_from_oneshot  reply_oneshot) -> (me_slot, exports, note_new_state);

			    (ball_state_egg ()) -> (ball_state_exports, ball_state_egg');

			    fun phase3											# PUBLIC. PHASE 3: Accept our Imports, then wait for Run_Gun to fire.
				(
				  imports:	Imports,
				  run_gun':	Run_Gun,	
				  end_gun':	End_Gun
				)
				=
				{
				    ball_state_imports = { state_sink => note_new_state };

				    ball_state_egg' (ball_state_imports, run_gun', end_gun');

				    put_in_mailslot  (me_slot, { me, ball_look_arg, imports, run_gun', end_gun', look_endstate_oneshot,
								 ball_look_callbacks,
								 widget_control_callbacks
							       }
						     );
				};

			    (exports, phase3);
			};
	    };


	fun pprint_ball_look_arg
	      (pp:		pp::Prettyprint_Mill)
	      (ball_look_arg:	Ball_Look_Arg)
	    =
	    {
		ball_look_arg
		  ->
		  ( options:	List(Ball_Look_Option)
		  );

		pp.box {.
		    pp.txt " [";
		    pp::seq {. pp.txt ", "; }
			    pprint_option
			    options
			    ;	
		    pp.txt " ]";
		};
	    }
	    where
		fun pprint_option option
		    =
		    case option
			#
			MICROTHREAD_NAME name		=>  {  pp.lit (sprintf "MICROTHREAD_NAME \"%s\"" name);		};
			ID			id	=>  {  pp.lit (sprintf "ID %d" (id_to_int id)        );		};
			WIDGET_CONTROL_CALLBACK _	=>  {  pp.lit          "WIDGET_CONTROL_CALLBACK (callback)";	};
			BALL_LOOK_CALLBACK _		=>  {  pp.lit          "BALL_LOOK_CALLBACK (callback)";	};
		    esac;
	    end;
    };

