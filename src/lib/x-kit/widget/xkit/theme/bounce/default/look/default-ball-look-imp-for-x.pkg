	    end;	



	fun startup													# Root fn of imp microthread.
	      ( id:		Id,
		reply_oneshot:  Oneshot_Maildrop( (Me_Slot, Exports, bs::Ball_State_Needs -> Void) )
	      )
	      ()													# Note currying.
	    =
	    {   me_slot  =  make_mailslot  ()	:  Me_Slot;
		#
		bounce_to_look		=  { id, do_something, pass_something, pass_draw_done_flag };
		gui_to_look		=  { id, regenerate_look };
		ball_look		=  { id, do_something, pass_something };
		
		exports			=  { bounce_to_look, gui_to_look };

		to          =  make_replyqueue();
		#
		put_in_oneshot (reply_oneshot, (me_slot, exports, note_new_state));					# Return value from make_ball_look().

		(take_from_mailslot  me_slot)										# Input args from configure_default_ball_look_for_x().
		    ->
