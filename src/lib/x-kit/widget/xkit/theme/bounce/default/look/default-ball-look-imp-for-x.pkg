	    end;


	fun process_options
	    ( options: List(Ball_Look_Option),
	      #
	      { name,
		id,
		ball_look_callbacks,
		widget_control_callbacks
	      }
	    )
	    =
	    {   my_name				=  REF name;
		my_id				=  REF id;
		my_widget_control_callbacks	=  REF widget_control_callbacks;
		my_ball_look_callbacks		=  REF      ball_look_callbacks;
		#
		apply  do_option  options
		where
		    fun do_option (MICROTHREAD_NAME        n) =>   my_name			:=  n;
			do_option (ID      	           i) =>   my_id                   	:=  i;
			#
			do_option (WIDGET_CONTROL_CALLBACK c) =>   my_widget_control_callbacks	:=  c ! *my_widget_control_callbacks;
			do_option (BALL_LOOK_CALLBACK      c) =>   my_ball_look_callbacks	:=  c ! *my_ball_look_callbacks;
		    end;
		end;

		{ name			    =>  *my_name,
		  id 			    =>  *my_id,
		  ball_look_callbacks       =>  *my_ball_look_callbacks,
		  widget_control_callbacks  =>  *my_widget_control_callbacks
		};
	    };


