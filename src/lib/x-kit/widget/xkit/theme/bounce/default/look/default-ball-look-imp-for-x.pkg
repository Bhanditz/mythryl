		apply   {. #callback bounce_to_look;	}   widget_control_callbacks;					# Pass our port to everyone who asked for it.

		block_until_mailop_fires  run_gun';									# Wait for the starting gun.

		run (ball_q, { me, ball_look_arg, imports, to, end_gun', look_endstate_oneshot });			# Will not return.
	    }
	    where
		ball_q     =  make_mailqueue (get_current_microthread()):  Ball_Q;


