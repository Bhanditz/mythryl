		    fun find_appropriate_gadget_info
			  (
			    topwindow_info:		Topwindow_Info,
			    event_point
			  )
			=
			{
			    smallest_containing_look_imp = REF (NULL: Null_Or( Gadget_Info ));
											#
			    fun consider_look_imp (gadget_info: Gadget_Info)
				=
				{   box = *gadget_info.site;
				    #
				    box -> { row, col, high, wide };

				    point_is_in_box = g2d::point::in_box (event_point, box);

# printf "guievent_sink()/guiboss/do_button_press: considering widget at row %d col %d high %d wide %d  point_is_in_box=%B  wants_mouseclicks=%B -- guiboss-imp.pkg\n" row col high wide  point_is_in_box gadget_info.guiboss_to_gadget.wants_mouseclicks;
				    if (point_is_in_box /* and gadget_info.guiboss_to_gadget.wants_mouseclicks */)
					#
					smallest_containing_look_imp
					    :=
					    THE gadget_info;
				    fi;
				};

			    apply  consider_look_imp  (im::vals_list *topwindow_info.gadget_imps);

			    *smallest_containing_look_imp;
			};
