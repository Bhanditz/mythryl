			  )
			=
			{
			    case (find_appropriate_gadget_info (topwindow_info, button_xevtinfo.event_point))
				#
				THE gadget_info
				    =>
				    {
#					printf "guievent_sink()/guiboss/do_button_press: FOUND CANDIDATE!\n";
