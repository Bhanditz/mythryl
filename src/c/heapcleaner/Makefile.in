#
# the makefile for the garbage collector and heap I/O library
#

AR =		ar
ARFLAGS =	rcv
RANLIB =	ranlib

LIB =		libmythryl-cleaner.a
PTHREAD_LIB =	libmythryl-pthread-heapcleaner-stuff.a

HEAPCLEANER_OBJS =					\
		heapcleaner-initialization.o		\
		call-heapcleaner.o			\
		heapclean-agegroup0.o			\
		heapclean-n-agegroups.o			\
		heapcleaner-stuff.o			\
		hugechunk.o				\
		make-strings-and-vectors-etc.o		\
		get-chunk-age.o				\
		make-package-literals-via-bytecode-interpreter.o			\
		tuple-ops.o				\
		$(CHECK_HEAP)

HEAP_IO_OBJS =	import-heap.o				\
		export-heap.o				\
		datastructure-unpickler.o				\
		datastructure-pickler.o				\
		datastructure-pickler-cleaner.o		\
		import-heap-stuff.o				\
		export-heap-stuff.o			\
		writer.o				\
		mem-writer.o				\
		address-hashtable.o			\
		mythryl-callable-cfun-hashtable.o

PTHREAD_HEAPCLEANING_OBJS =	pthread-heapcleaner-stuff.o

OBJS =		$(HEAPCLEANER_OBJS) $(HEAP_IO_OBJS)
PTHREAD_OBJS =	$(OBJS) $(PTHREAD_HEAPCLEANING_OBJS)

VERSION =	v-dummy

OBJS_DIR =	../o
INC_DIR =	../h
INCLUDES =	-I$(OBJS_DIR) -I$(INC_DIR)


$(LIB) :	$(VERSION) $(OBJS)
	@rm -rf $(LIB)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)
	$(RANLIB) $(LIB)

$(PTHREAD_LIB) :	$(VERSION) $(PTHREAD_OBJS)
	@rm -rf $(PTHREAD_LIB)
	$(AR) $(ARFLAGS) $(PTHREAD_LIB) $(PTHREAD_OBJS)
	$(RANLIB) $(PTHREAD_LIB)

$(VERSION) :
	echo "$(VERSION)" > $(VERSION)


