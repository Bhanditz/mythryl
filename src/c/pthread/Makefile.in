# Makefile.in
#
# The makefile for the "MP" (multicore) support library
#
# This makefile is/wouldbe invoked by the rule
#
#    $(CLIB_DIR)/pthread/libmythryl-multicore.a:  sizes-of-some-c-types--autogenerated.h system-signals.h
#	    (cd $(CLIB_DIR)/pthread; $(MAKE)  $(LIB_MK_ARGS) libmythryl-multicore.a)
#
# in
#
#     src/c/o/Makefile
#
# which derives from
#
#     src/c/o/Makefile.in
#
#

MAKE =		make
AR =		ar
ARFLAGS =	rcv
RANLIB =	ranlib

VERSION =	v-dummy

LIB =		libmythryl-multicore.a

INC_DIR =	../h
INCLUDES =	-I$(INC_DIR)


# Each version of the multicore-support library has its own list of .o files:
#
SGI_OBJS =	sgi-multicore.o



$(LIB) :	$(VERSION) $(OBJS)
	@rm -rf $(LIB)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)
	$(RANLIB) $(LIB)

$(VERSION) :
	echo "$(VERSION)" > $(VERSION)

sgi-multicore.o:	sgi-multicore.c \
		$(INC_DIR)/runtime-base.h $(INC_DIR)/runtime-configuration.h \
		$(INC_DIR)/runtime-values.h $(INC_DIR)/heap-tags.h $(INC_DIR)/runtime-multicore.h \
		$(INC_DIR)/task.h $(INC_DIR)/runtime-globals.h
	$(CC) -c $(CFLAGS) $(DEFS) $(INCLUDES) sgi-multicore.c

clean :
	@rm -f v-* *.o $(LIB)
