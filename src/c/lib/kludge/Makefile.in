#
# the makefile for nasty little kludges that didn't fit anywhere else
#

SHELL =		/bin/sh

INC_DIR =	../../h
CLIB_DIR =	../

INCLUDES =	-I$(INC_DIR) -I$(CLIB_DIR) -I../../o
GC_INCLUDES =	$(INCLUDES) -I../../heapcleaner

MAKE =		make
AR =		ar
ARFLAGS =	rcv
RANLIB =	ranlib

LIBRARY =	libmythryl-kludge.a

VERSION =	v-dummy

OBJS =		libmythryl-kludge.o

$(LIBRARY)	: $(VERSION) $(OBJS)
	rm -rf $(LIBRARY)
	$(AR) $(ARFLAGS) $(LIBRARY) $(OBJS)
	$(RANLIB) $(LIBRARY)

$(VERSION) :
	echo "$(VERSION)" > $(VERSION)

.c.o:	$(INC_DIR)/system-dependent-unix-stuff.h $(INC_DIR)/runtime-base.h $(INC_DIR)/runtime-values.h \
	$(INC_DIR)/make-strings-and-vectors-etc.h \
	$(CLIB_DIR)/lib7-c.h 
	$(CC) $(CFLAGS) $(DEFS) $(GC_INCLUDES) -c $<

clean :
	@rm -f v-* *.o $(LIBRARY)

