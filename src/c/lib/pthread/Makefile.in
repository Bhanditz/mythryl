#
# The makefile for the multicore support library
#
# We get invoked by the rule
#
#     $(CLIB_DIR)/pthread/libmythryl-multicore.a:  sizes-of-some-c-types--autogenerated.h system-signals.h
#	    (cd $(CLIB_DIR)/pthread; $(MAKE)  $(LIB_MK_ARGS) libmythryl-multicore.a)
#
# in				src/c/o/Makefile
# which derives from		src/c/o/Makefile.in

SHELL =		/bin/sh

INC_DIR =	../../h
CLIB_DIR =	../

INCLUDES =	-I$(INC_DIR) -I$(CLIB_DIR) -I../../o

MAKE =		make
AR =		ar
ARFLAGS =	rcv
RANLIB =	ranlib

LIBRARY =	libmythryl-multicore.a

VERSION =	v-dummy

OBJS =		libmythryl-multicore.o \
		acquire-pthread.o \
		release-pthread.o \
		max-pthreads.o \
		spin-lock.o

$(LIBRARY)	: $(VERSION) $(OBJS)
	rm -rf $(LIBRARY)
	$(AR) $(ARFLAGS) $(LIBRARY) $(OBJS)
	$(RANLIB) $(LIBRARY)

$(VERSION) :
	echo "$(VERSION)" > $(VERSION)

.c.o:	$(INC_DIR)/system-dependent-unix-stuff.h $(INC_DIR)/runtime-base.h $(INC_DIR)/runtime-values.h \
	$(INC_DIR)/runtime-multicore.h \
	$(CLIB_DIR)/lib7-c.h cfun-proto-list.h cfun-list.h
	$(CC) $(CFLAGS) $(DEFS) $(INCLUDES) -c $<

clean :
	@rm -f v-* *.o $(LIBRARY)

